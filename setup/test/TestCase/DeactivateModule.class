<?php

class DeactivateModuleTestCase extends TestCase {

    function DeactivateModuleTestCase($moduleId) {
	$this->_moduleId = $moduleId;
    }

    function getDescription() {
	global $gallery;
	list ($ret, $moduleStatus) = GalleryPluginMap::getPluginStatus('module');
	if ($ret->isError()) {
	    $status = 'error';
	} else {
	    if (empty($moduleStatus[$this->_moduleId]['active'])) {
		$status = 'inactive';
	    } else {
		$status = 'active';
	    }
	}
	return "Deactivate the $this->_moduleId module (currently $status)";
    }

    function testStart() {
	global $gallery;

	list ($ret, $module) = $gallery->loadModule($this->_moduleId);
	if ($ret->isError()) {
	    return $ret->wrap(__FILE__, __LINE__);
	}
	
	$ret = $module->deactivate();
	if ($ret->isError()) {
	    return $ret->wrap(__FILE__, __LINE__);
	}

	return GalleryStatus::success();
    }
}

?>
