/**
 * Gallery specific version of PHPUnit's TestCase class.  
 */
class GalleryTestCase extends TestCase {

    function GalleryTestCase($methodName) {
	$this->TestCase($methodName);
    }

    function failWithStatus($ret) {
	global $gallery;
	
	// Fail with as much debug info as we can muster.
	$this->assert(false, $ret->getAsHtml() . $gallery->getDebugBuffer());
    }

    function setUp() {
	global $gallery;
	global $HTTP_GET_VARS;
	global $HTTP_POST_VARS;
	global $HTTP_POST_FILES;

	parent::setUp();

	/* Clear out any request vars */
	$this->_saveRequestVars = array($HTTP_GET_VARS, $HTTP_POST_VARS, $HTTP_POST_FILES);
	$HTTP_GET_VARS = array();
	$HTTP_POST_VARS = array();
	$HTTP_POST_FILES = array();
	
	/*
	 * Try to ensure enough time for this test to complete.  If a test
	 * needs more time, then it should extend the limit itself.
	 */
	$gallery->guaranteeTimeLimit(30);

	/* Start with a clean slate*/
	$gallery->reset();
	
	$ret = $gallery->beginTransaction();
	if ($ret->isError()) {
	    return $ret->wrap(__FILE__, __LINE__);
	}

	$gallery->clearDebugBuffer();
    }

    function assert($boolean, $message=null) {
	global $gallery;
	$message = $gallery->getDebugBuffer() . $message;
	parent::assert($boolean, $message);
    }

    function assertEquals($expected, $actual, $message=null) {
	global $gallery;
	$message = $gallery->getDebugBuffer() . $message;
	parent::assertEquals($expected, $actual, $message);
    }

    function assertRedirect($params, $redirectUrl, $message=null) {
	global $gallery;
	$urlGenerator = $gallery->getUrlGenerator();
	$this->assertEquals(array('redirect' => $urlGenerator->generateUrl($params)), $redirectUrl, $message);
    }
    
    function tearDown() {
	global $gallery;
	global $HTTP_GET_VARS;
	global $HTTP_POST_VARS;
	global $HTTP_POST_FILES;

	/* Make sure we're not hanging onto any locks */
	if (!empty($gallery->_locks)) {
	    /* Bend the API slightly and release all locks */
	    $gallery->_releaseAllLocks(false);
	    $this->assert(0, 'There are unreleased locks!');
	}
	
	$ret = $gallery->commitTransaction();
	if ($ret->isError()) {
	    $ret = $ret->wrap(__FILE__, __LINE__);
	    $this->fail($ret->getAsText());
	}

	/* Restore form vars */
	list ($HTTP_GET_VARS, $HTTP_POST_VARS, $HTTP_POST_FILES) = $this->_saveRequestVars;
	
	parent::tearDown();
    }

    /*
     * Create a random album
     *
     * @param int the id of the parent album
     * @return array object GalleryStatus a status code
     *               object GalleryAlbumItem
     * @access private
     */
    function _createRandomAlbum($parentId=null) {
	global $gallery;
	
	list ($ret, $album) = GalleryFactory::newInstance('GalleryEntity', 'GalleryAlbumItem');
	if ($ret->isError()) {
	    return array($ret->wrap(__FILE__, __LINE__), null);
	}

	if (!isset($album)) {
	    return array(GalleryStatus::error(ERROR_MISSING_OBJECT, __FILE__, __LINE__), null);
	}

	if (isset($parentId)) {
	    list ($ret, $lockIds[]) = $gallery->acquireReadLock($parentId);
	    if ($ret->isError()) {
		return array($ret->wrap(__FILE__, __LINE__), null);
	    }
	    
	    $ret = $album->create($parentId, 'albumtest' . rand());
	} else {
	    $ret = $album->createRoot('albumtest' . rand());
	}
	if ($ret->isError()) {
	    return array($ret->wrap(__FILE__, __LINE__), null);
	}

	/* Change some settings */
	$album->setTitle('This is my title');
	$album->setDescription('This is a description');

	/* Save it */
	$ret = $album->save();
	if ($ret->isError()) {
	    return array($ret->wrap(__FILE__, __LINE__), null);
	}

	/* Leggo of our locks */
	if (isset($lockIds)) {
	    $ret = $gallery->releaseLocks($lockIds);
	    if ($ret->isError()) {
		return array($ret->wrap(__FILE__, __LINE__), null);
	    }
	}

	return array(GalleryStatus::success(), $album);
    }
    

    /*
     * Create a random data item
     *
     * @param int the id of the parent album
     * @return array object GalleryStatus a status code
     *               object GalleryDataItem
     * @access private
     */
    function _createRandomDataItem($parentId, $mimeType='application/unknown', $fields=array()) {
	global $gallery;
	
	list ($ret, $item) = GalleryFactory::newInstance('GalleryEntity', 'GalleryUnknownItem');
	if ($ret->isError()) {
	    return array($ret->wrap(__FILE__, __LINE__), null);
	}

	if (!isset($item)) {
	    return array(GalleryStatus::error(ERROR_MISSING_OBJECT, __FILE__, __LINE__), null);
	}

	list ($ret, $lockIds[]) = $gallery->acquireReadLock($parentId);
	if ($ret->isError()) {
	    return array($ret->wrap(__FILE__, __LINE__), null);
	}

	$inputFile = __FILE__;
	if (get_magic_quotes_gpc()) {
	    $inputFile = addslashes($inputFile);
	}
	
	$ret = $item->create($parentId, $inputFile, $mimeType,
			     'test-' . rand(1, 5000) . '.dat');
	if ($ret->isError()) {
	    return array($ret->wrap(__FILE__, __LINE__), null);
	}

	/* Change some settings */
	$item->setTitle('This is my title');
	$item->setSummary('This is a summary');
	$item->setKeywords('These are some keywords');
	$item->setDescription('This is a description');

	foreach ($fields as $key => $value) {
	    eval("\$item->set$key(\$value);");
	}

	/* Save it */
	$ret = $item->save();
	if ($ret->isError()) {
	    return array($ret->wrap(__FILE__, __LINE__), null);
	}

	/* Leggo of our locks */
	if (isset($lockIds)) {
	    $ret = $gallery->releaseLocks($lockIds);
	    if ($ret->isError()) {
		return array($ret->wrap(__FILE__, __LINE__), null);
	    }
	}

	return array(GalleryStatus::success(), $item);
    }
    
