/**
 * A controller specific version of GalleryTestCase
 */
class GalleryControllerTestCase extends GalleryTestCase {

    /**
     * The controller instance
     * @protected
     */
    var $_controller;

    function GalleryTestCase($methodName) {
	$this->TestCase($methodName);
    }

    function setUp() {
	global $gallery;

	parent::setUp();

	/* Clear out any form vars */
	GalleryUtilities::removeFormVariables('form.');

	list ($ret, $this->_controller) = GalleryController::loadController($this->getControllerName());
	if ($ret->isError()) {
	    return $this->failWithStatus($ret->wrap(__FILE__, __LINE__));
	}
    }

    function tearDown() {
	/* Clear out any form vars */
	GalleryUtilities::removeFormVariables('form.');

	parent::tearDown();
    }

    function assertRedirect($params, $redirectUrl, $message=null) {
	global $gallery;
	$urlGenerator = $gallery->getUrlGenerator();
	$this->assertEquals(array('redirect' => $urlGenerator->generateUrl($params)), $redirectUrl, $message);
    }
}
