/**
 * Item add WebDAV tests.
 * @package WebDav
 * @subpackage PHPUnit
 * @author Jack Bates <ms419@freezone.co.uk>
 * @version $Revision: 15636 $
 */
class ItemAddWebDavTest extends ItemAddPluginTestCase {

    function ItemAddWebDavTest($methodName) {
	$this->ItemAddPluginTestCase($methodName, 'webdav', 'ItemAddWebDav');
    }

    function setUp() {
	$ret = parent::setUp();
	if ($ret) {
	    return $ret;
	}

	/* Create test items */
	list ($ret, $this->_album) = $this->_createRandomAlbum($this->_getRootId());
	if ($ret) {
	    return $ret;
	}
	$this->_markForCleanup($this->_album);
    }

    function testRequiresPutRequestMethod() {
	$_SERVER['REQUEST_METHOD'] = 'POST';
	$results = $this->handleRequest($this->_album, ERROR_REQUEST_FORGED);
    }
}
