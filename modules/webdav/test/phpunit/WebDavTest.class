	if ($ret && !($ret->getErrorCode() & ERROR_BAD_PATH)) {
	    return $this->failWithStatus($ret);
	}

	$this->assertEquals(GALLERY_ERROR | ERROR_BAD_PATH, $ret->getErrorCode());

	$this->assertEquals(array('status' => 'HTTP/1.0 403 Forbidden'), $headers);

