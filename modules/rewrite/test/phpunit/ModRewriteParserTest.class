	    'module', 'rewrite', 'accessList');
	if ($ret) {
	    return array($ret->wrap(__FILE__, __LINE__), null, null);
	}

	list($ret, $allowEmptyReferer) = GalleryCoreApi::getPluginParameter(
	    'module', 'rewrite', 'allowEmptyReferer');
	if ($ret) {
	    return array($ret->wrap(__FILE__, __LINE__), null, null);
