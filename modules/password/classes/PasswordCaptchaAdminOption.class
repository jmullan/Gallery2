/**
 * Captcha configuration for password module.
 *
 * @package Password
 * @subpackage Classes
 */
class PasswordCaptchaAdminOption extends CaptchaAdminOption {
    /**
     * @see CaptchaAdminOption::getOptionData()
     */
    function getOptionData() {
	list ($ret, $module) = GalleryCoreApi::loadPlugin('module', 'password');
	if ($ret) {
	    return array($ret->wrap(__FILE__, __LINE__), null, null, null);
	}
	/* Note: we use validation.level for all plugins, but config is via captcha module */
	return array(null, $module->translate('Password Items'),
		     array('module', 'password', 'validation.level'),
		     array('HIGH', 'MEDIUM', 'LOW', 'OFF'));
    }
}
