/**
 * @package NetPbm
 * @subpackage TestCase
 */
class ConfigureNetPbmTestCase extends TestCase {
    var $_moduleId = 'netpbm';

    function getDescription() {
	return "Configure the $this->_moduleId module";
    }

    function testStart() {
	global $gallery;

	list ($ret, $module) = $gallery->loadModule($this->_moduleId);
	if ($ret->isError()) {
	    return $ret->wrap(__FILE__, __LINE__);
	}

	$ret = $module->init();
	if ($ret->isError()) {
	    return $ret->wrap(__FILE__, __LINE__);
	}
	
	$ret = $module->install();
	if ($ret->isError()) {
	    return $ret->wrap(__FILE__, __LINE__);
	}

	/* Hardcode a path we know will work (on Bharat's dev box) */
	$platform = $gallery->getPlatform();
	if (get_class($platform) == 'unixplatform') {
	    if ($platform->file_exists('/usr/local/bin/pnmtojpeg')) {
		$ret1 = $module->setModuleParameter('path', '/usr/local/bin/');
		$ret2 = $module->setModuleParameter('pnmtojpeg', 'pnmtojpeg');
	    } else {
		$ret1 = $module->setModuleParameter('path', '/usr/bin/');
		$ret2 = $module->setModuleParameter('pnmtojpeg', 'pnmtojpeg');
	    }
	} else {
	    $ret1 = $module->setModuleParameter('path', 'c:\\apps\\netpbm\\');
	    $ret2 = $module->setModuleParameter('pnmtojpeg', 'ppmtojpeg');
	}
	if ($ret1->isError()) {
	    return $ret1->wrap(__FILE__, __LINE__);
	}
	if ($ret2->isError()) {
	    return $ret2->wrap(__FILE__, __LINE__);
	}

	return GalleryStatus::success();
    }
}

?>
