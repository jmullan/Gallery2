/**
 * A helper class for the RandomHighlight module.
 *
 * @package RandomHighlight
 * @subpackage Classes
 */
class RandomHighlightHelper {

    /**
     * Set entity type for an item
     *
     * @param GalleryDerivativeImage item
     * @param boolean isRandomHighlight true to set RandomHighlight type
     * @return GalleryStatus a status code
     * @static
     */
    function assignEntityType(&$item, $isRandomHighlight) {
	list ($ret, $lockId) = GalleryCoreApi::acquireWriteLock($item->getId());
	if ($ret->isError()) {
	    return $ret->wrap(__FILE__, __LINE__);
	}
	$item->setEntityType(
	    $isRandomHighlight ? 'RandomHighlightDerivativeImage' : 'GalleryDerivativeImage');
	$ret = $item->save();
	if ($ret->isError()) {
	    return $ret->wrap(__FILE__, __LINE__);
	}
	$ret = GalleryCoreApi::releaseLocks($lockId);
	if ($ret->isError()) {
	    return $ret->wrap(__FILE__, __LINE__);
	}
	return GalleryStatus::success();
    }

    /**
     * Count number of RandomHighlight derivatives
     *
     * @return array GalleryStatus a status code
     *               int count
     * @static
     */
    function fetchItemCount() {
	global $gallery;
	$query = 'SELECT COUNT([GalleryEntity::id]) FROM [GalleryEntity] ' .
		 'WHERE [GalleryEntity::entityType] = \'RandomHighlightDerivativeImage\'';

	list ($ret, $results) = $gallery->search($query);
	if ($ret->isError()) {
	    return array($ret->wrap(__FILE__, __LINE__), null);
	}

	$count = 0;
	if ($result = $results->nextResult()) {
	    $count = (int)$result[0];
	}
	return array(GalleryStatus::success(), $count);
    }

    /**
     * Reset all RandomHighlight derivatives back to their normal type
     *
     * @return GalleryStatus a status code
     * @static
     */
    function resetRandomHighlightItems() {
	global $gallery;
	$query = 'SELECT [GalleryEntity::id] FROM [GalleryEntity] ' .
		 'WHERE [GalleryEntity::entityType] = \'RandomHighlightDerivativeImage\'';

	list ($ret, $results) = $gallery->search($query);
	if ($ret->isError()) {
	    return $ret->wrap(__FILE__, __LINE__);
	}

	for ($i = 0; $result = $results->nextResult();) {
	    if ($i++ % 10 == 0) {
		$gallery->guaranteeTimeLimit(5);
	    }
	    $id = (int)$result[0];
	    list ($ret, $item) = GalleryCoreApi::loadEntitiesById($id);
	    if ($ret->isError()) {
		return $ret->wrap(__FILE__, __LINE__);
	    }
	    $ret = RandomHighlightHelper::assignEntityType($item, false);
	    if ($ret->isError()) {
		return $ret->wrap(__FILE__, __LINE__);
	    }
	}
	return GalleryStatus::success();
    }
}
