/**
 * Url Generator
 *
 * @package GalleryCore
 * @subpackage Classes
 */
class GalleryUrlGenerator {
    /*
     * ****************************************
     *                 Members
     * ****************************************
     */

    /**  
     * The base Gallery URL.  Everything else is an argument to this.
     * 
     *
     * @var array $_baseUrl
     * @access private
     */
    var $_baseUrl;

    /*
     * ****************************************
     *                 Methods
     * ****************************************
     */

    /**
     * Constructor
     *
     * @param string the base URL
     */
    function GalleryUrlGenerator($baseUrl) {
	$this->_baseUrl = $baseUrl;
    }

    /**
     * Return a valid Gallery URL.
     */
    function generateUrl($params=array()) {
	global $gallery;
	    
	$session =& $gallery->getSession();
	if (!($session->isUsingCookies())) {
	    list ($sessionKey, $sessionId) = $session->getSessionDescriptor();
	    $params[$sessionKey] = $sessionId;
	}
	    
	foreach ($params as $key => $value) {
	    $args[] = GALLERY_FORM_VARIABLE_PREFIX . "$key=$value";
	}
	    
	$url = $this->_baseUrl;
	if (isset($args)) {
	    $url .= '?' . join('&', $args);
	}
	    
	return $url;
    }
}

