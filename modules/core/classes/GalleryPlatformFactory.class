/* Load the platform class */
require_once(dirname(__FILE__) . '/GalleryPlatform.class');

/**
 * Factory for creating GalleryPlatform instances
 *
 * @version $Id$
 * @package GalleryCore
 * @author Bharat Mediratta <bharat@menalto.com>
 * @abstract
 */
class GalleryPlatformFactory {

    /**
     * Create a new GalleryPlatform instance of the correct type
     *
     * @param string the type of platform object to create
     * @return a GalleryPlatform instance
     */
    function newInstance($type) {
	switch ($type) {
	case 'winnt':
	    $base = dirname(__FILE__) . '/GalleryPlatform';
	    require_once($base . '/WinNtPlatform.class');
	    return new WinNtPlatform();

	default:
	    /* Assume a Unix variant */
	    $base = dirname(__FILE__) . '/GalleryPlatform';
	    require_once($base . '/UnixPlatform.class');
	    return new UnixPlatform();
	}
    }
}
