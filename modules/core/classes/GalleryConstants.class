 */
define('GALLERY_PERMISSION_COMPOSITE',  0x00000002);

/**
 * This permission is for item administration
 */
define('GALLERY_PERMISSION_ITEM_ADMIN', 0x00000004);

/*
 * ****************************************
 *           Lock constants
 * ****************************************
 */

/**
 * Read lock type
 */
define('LOCK_READ', 1);

