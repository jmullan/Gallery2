/**
 * This is a GalleryModule that has template support.
 *
 * @version $Revision$ $Date$
 * @package GalleryCore
 * @author Bharat Mediratta <bharat@menalto.com>
 */
class GalleryTemplateModule extends GalleryModule {

    /*
     * ****************************************
     *                 Members
     * ****************************************
     */

    /**
     * The template instance
     *
     * @var object GalleryTemplate $_template
     * @access private
     */
    var $_template;

    /*
     * ****************************************
     *                 Methods
     * ****************************************
     */

    /**
     * Get the configured GalleryTemplate instance
     *
     * @return object GalleryTemplate a template instance
     */
    function &getTemplate() {
	if (!isset($this->_template)) {
	    $templateDir = $gallery->getConfig('code.gallery.modules') . $this->getName() . '/templates/';
	    $platform = $gallery->getPlatform();
	    if (!$platform->file_exists($templateDir)) {
		$gallery->debug("Missing theme template dir: $templateDir");
		return GalleryStatus::error(ERROR_BAD_PARAMETER, __FILE__, __LINE__);
	    }
	    
	    $this->_template = new GalleryTemplate('modules', $this->getName(), $templateDir);
	    return GalleryStatus::success();
	}
	    
	return $this->_template;
    }
}
