/**
 * Load the API class
 */
require_once(dirname(__FILE__) . '/GalleryStorage.class');
require_once(dirname(__FILE__) . '/GallerySearchResults.class');

/**
 * Factory for creating GalleryStorage instances
 *
 * @package GalleryCore
 * @subpackage Classes
 * @abstract
 */
class GalleryStorageFactory {

    /**
     * Create a new GalleryStorage instance of the correct type
     *
     * @param string the type of storage object to create
     * @return a GalleryStorage instance
     * @static
     */
    function newInstance($type, $config) {
	switch ($type) {
	case 'database':
	    $base = dirname(__FILE__) . '/GalleryStorage';
	    require_once($base . '/DatabaseStorage.class');
	    require_once($base . '/DatabaseSearchResults.class');
	    require_once($base . '/DatabaseStorageFactory.class');
	    return DatabaseStorageFactory::newInstance($config['type'],
						       $config);
	    
	default:
	    return array(GalleryStatus::error(ERROR_UNIMPLEMENTED,
					      __FILE__, __LINE__),
			 null);
	}
    }
}
