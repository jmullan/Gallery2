/**
 * An Unix version of the GalleryPlatform class
 * 
 * @version $Id$
 * @package GalleryPlatform
 * @access public
 * @author Bharat Mediratta <bharat@menalto.com>
 */
class UnixPlatform extends GalleryPlatform {

    /**
     * Convert a path from neutral format into platform specific format.
     *
     * @param string neutral path
     * @return string platform specific path
     * @access public
     */
    function importPath($path) {

	/* The Unix format is the same as the neutral format */
	return $path;
    }

    /**
     * Convert a path from specific format into neutral format.
     *
     * @param string platform specific path
     * @return string neutral path
     * @access public
     */
    function exportPath($path) {

	/* The Unix format is the same as the neutral format */
	return $path;
    }

    /**
     * Convert a path from neutral format to an executable format
     *
     * @param string neutral path
     * @return string platform specific path
     * @access public
     */
    function executablePath($path) {

	/* The Unix format is the same as the neutral format */
	return $path;
    }

    /**
     * Execute a command and record the results and status.
     *
     * @param string the command to excute
     * @param array the location to put output from the command 
     * @return bool TRUE if the command succeeded, FALSE otherwise.
     * @access public
     */
    function exec($cmd, &$results) {
	global $gallery;

	/* If we're in debug mode, redirect STDERR to a file */
	if ($gallery->getDebug()) {
	    $tmpDir = $gallery->getConfig('data.gallery.tmp');
	    $debugFile = tempnam($tmpDir, 'g2dbg');
	    $cmd = "($cmd) 2>$debugFile";
	}

	$gallery->debug("Executing: $cmd");
	exec($cmd, $results, $status);

	list ($ret, $expected) =
	    $gallery->getModuleParameter('core', 'exec.expectedStatus');
	if ($ret->isError()) {
	    $gallery->debug('Unable to look up core::exec.expectedStatus param');
	    $expected = 0;
	}

	/* Read any debug output and dump it out */
	if ($gallery->getDebug()) {
	    $gallery->debug("Regular Output:");
	    if (!empty($results)) {
		foreach ($results as $line) {
		    $gallery->debug($line);
		}
	    }
	    
	    $gallery->debug("Error Output:");
	    list($ret, $platform) = $gallery->getPlatform();
	    if ($ret->isError()) {
		return $ret->wrap(__FILE__, __LINE__);
	    }

	    if ($platform->file_exists($debugFile)) {
		if ($fd = $platform->fopen($debugFile, "r")) {
		    $lineCount = 0;
		    while (!feof($fd)) {
			$buf = fgets($fd, 4096);
			$buf = rtrim($buf);
			$results[] = $buf;
			$gallery->debug($buf);
			if (!empty($buf)) {
			    $lineCount++;
			}
		    }
		    fclose($fd);
		}
		unlink($debugFile);

		if ($lineCount == 0) {
		    $gallery->debug("(no error output)");
		} 
		
		$gallery->debug("Status: $status (expected $expected)");
	    }
	}

	return ($status == $expected);
    }
}
?>
