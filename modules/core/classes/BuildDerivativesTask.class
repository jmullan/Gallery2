GalleryCoreApi::relativeRequireOnce('modules/core/AdminMaintenance.inc');

/**
 * This is a MaintenanceTask that will ensure the data files for all derivatives
 * (thumbnails, etc) have been built.
 *
 * @package GalleryCore
 * @subpackage UserInterface
 *
 */
class BuildDerivativesTask extends MaintenanceTask {

    /**
     * @see MaintenanceTask::getInfo()
     */
    function getInfo() {
	global $gallery;

	return array('l10Domain' => 'modules_core',
		     'title' => $gallery->i18n('Build All Thumbnails/Resizes'),
		     'description' => $gallery->i18n(
	    'Ensure data files for all derivatives (thumbnails, etc) have been built.'));
    }

    /**
     * @see MaintenanceTask::run()
     */
    function run(&$immediateView) {
	global $gallery;

	list ($ret, $module) = GalleryCoreApi::loadPlugin('module', 'core');
	if ($ret->isError()) {
	    return array($ret->wrap(__FILE__, __LINE__), null, null);
	}
	$message = $module->translate('Processing...');

	$ret = $immediateView->doLoadImmediateTemplate();
	if ($ret->isError()) {
	    return array($ret->wrap(__FILE__, __LINE__), null, null);
	}

	$ret = $immediateView->renderHeader(
	    $module->translate('Build All Thumbnails/Resizes'), $message, '');
	if ($ret->isError()) {
	    return array($ret->wrap(__FILE__, __LINE__), null, null);
	}

	list ($ret, $results) =
	    $gallery->search('SELECT [DerivativeImage::id] FROM [DerivativeImage] ' .
			     'ORDER BY [DerivativeImage::id]');
	if ($ret->isError()) {
	    return array($ret->wrap(__FILE__, __LINE__), null, null);
	}

	$i = 0;
	$total = $results->resultCount();
	while ($result = $results->nextResult()) {
	    list ($ret) = GalleryCoreApi::rebuildDerivativeCacheIfNotCurrent($result[0]);
	    if ($ret->isError()) {
		return array($ret->wrap(__FILE__, __LINE__), null, null);
	    }
	    
	    if (++$i % 5 == 0 || $i == $total) {
		$message = $module->translate(
		    array('text' => 'Processing image %d of %d', 'arg1' => $i, 'arg2' => $total));
		$ret = $immediateView->renderStatusMessage($message, '', $i / $total);
		if ($ret->isError()) {
		    return array($ret->wrap(__FILE__, __LINE__), null, null);
		}
	    }
	}

	return array(GalleryStatus::success(), true,
		     array($module->translate(array('text' => 'Checked %d items',
						    'arg1' => $total))));
    }
}
