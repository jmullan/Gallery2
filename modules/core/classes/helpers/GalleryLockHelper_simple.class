/**
 * Helper class for handling locking
 *
 * @package GalleryCore
 * @subpackage Helpers
 * @abstract
 */
class GalleryLockHelper_simple {

    /**
     * Get the set of lock ids
     *
     * @return object array of lock ids
     * @access private
     * @static
     */
    function getLockIds() {
	$locks =& GalleryLockHelper_simple::_getLocks();
	return array_keys($locks);
    }
    
    /**
     * Get the lock set
     *
     * @return object array of locks
     * @access private
     * @staticvar locks our lock set
     * @static
     */
    function &_getLocks() {
	static $locks;
	if (!isset($locks)) {
	    $locks = array();
	}

	return $locks;
    }
}
