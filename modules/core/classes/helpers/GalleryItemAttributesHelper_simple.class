require_once(dirname(__FILE__) . '/../GalleryItemAttributesMap.class');

/**
 *
 * @package GalleryCore
 * @subpackage Helpers
 */
class GalleryItemAttributesHelper_simple {

    /**
     * Update the view count for this item id
     * @param int the item id
     * @param int the amount to increment
     * @static
     */
    function incrementViewCount($itemId, $step=1) {
	require_once(dirname(__FILE__) . '/../GalleryStorage/DatabaseSqlFragment.class');
	$func = '= [GalleryItemAttributesMap::viewCount] + ?';
	$ret = GalleryItemAttributesMap::updateMapEntry(array('itemId' => $itemId),
		array('viewCount' => new DatabaseSqlFragment($func, $step)));
	if ($ret->isError()) {
	    return $ret->wrap(__FILE__, __LINE__);
	}

	return GalleryStatus::success();
    }
    
}
