require_once(dirname(__FILE__) . '/GallerySmarty.class');

/**
 * A wrapper around Smarty that profiles certain methods
 *
 * @package GalleryCore
 * @subpackage Classes
 */
class GalleryProfilingSmarty extends GallerySmarty {

    /*
     * ****************************************
     *                 Members
     * ****************************************
     */

    /*
     * ****************************************
     *                 Methods
     * ****************************************
     */

    /**
     * Profile Smarty's fetch method
     *
     * @see Smarty::fetch
     */
    function fetch($_smarty_tpl_file, $_smarty_cache_id = null,
		   $_smarty_compile_id = null, $_smarty_display = false) {

	GalleryProfiler::start('modules.core.classes.Smarty::fetch');
	list ($ret, $result) = parent::fetch($_smarty_tpl_file,
					     $_smarty_cache_id,
					     $_smarty_compile_id,
					     $_smarty_display);
	GalleryProfiler::stop('modules.core.classes.Smarty::fetch');
	if ($ret->isError()) {
	    return array($ret->wrap(__FILE__, __LINE__), $result);
	} else {
	    return array(GalleryStatus::success(), $result);
	}
    }
}
