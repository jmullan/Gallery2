/**
 * Representation of the many-to-many relationship between users and groups
 *
 * @g2 <class-name>GalleryPermissionMap</class-name>
 * @g2 <schema>
 * @g2   <schema-major>1</schema-major>
 * @g2   <schema-minor>0</schema-minor>
 * @g2 </schema>
 *
 * @version $Id$
 * @package GalleryCore
 * @author Bharat Mediratta <bharat@menalto.com>
 */

class GalleryPermissionMap_core {

    /**
     * @g2 <map>
     * @g2   <member>
     * @g2     <member-name>itemId</member-name>
     * @g2     <member-type>INTEGER</member-type>
     * @g2     <member-size>MEDIUM</member-size>
     * @g2     <indexed/>
     * @g2   </member>
     * @g2   <member>
     * @g2     <member-name>userId</member-name>
     * @g2     <member-type>INTEGER</member-type>
     * @g2     <member-size>MEDIUM</member-size>
     * @ge     <indexed/>
     * @g2   </member>
     * @g2   <member>
     * @g2     <member-name>permission</member-name>
     * @g2     <member-type>INTEGER</member-type>
     * @g2     <member-size>MEDIUM</member-size>
     * @g2   </member>
     * @g2   <key>
     * @g2     <member-name>itemId</member-name>
     * @g2     <member-name>userId</member-name>
     * @g2   </key>
     * @g2 </map>
     * 
     */
    
    /**
     * Add the user to the group id specified.
     *
     * @param int the id of the GalleryGroup
     * @return object GalleryStatus a status code
     */
    function addRelationship($itemId, $userId, $permission) {
	global $gallery;
	if (empty($userId) || empty($groupId) || empty($permission)) {
	    return GalleryStatus::error(ERROR_BAD_PARAMETER,
					__FILE__, __LINE__);
	}

	/*
	 * Add a new entry in our groups table to represent this
	 * relationship.
	 */
	$this->addToPermissions(array("itemId" => $itemId,
				      "userId" => $userId,
				      "permission" => $permission));
	if ($ret->isError()) {
	    return $ret->wrap(__FILE__, __LINE__);
	}
	return GalleryStatus::success();
    }

    /**
     * Remove the user from the group id specified.
     *
     * @param int the id of the GalleryGroup
     * @return object GalleryStatus a status code
     */
    function removeRelationship($itemId, $userId, $permission) {
	global $gallery;
	if (empty($userId) || empty($groupId) || empty($permission)) {
	    return GalleryStatus::error(ERROR_BAD_PARAMETER,
					__FILE__, __LINE__);
	}

	/*
	 * Remove this relationship from our groups table.
	 */
	$ret = $this->removeFromPermissions(array("itemId" => $itemId,
						  "userId" => $userId,
						  "permission" => $permission));
	if ($ret->isError()) {
	    return $ret->wrap(__FILE__, __LINE__);
	}
	return GalleryStatus::success();
    }

    /**
     * Return a list of user ids belonging to a group
     *
     * You can specify how many userids to list, and where the windows is in
     * the list of all users.
     *
     * @param int the number of userids desired
     * @param int the start of the range
     * @return array object GalleryStatus a status code
     *               array group ids
     */
    function getPermissionsForItem($itemId) {
	global $gallery;

	$query = ;
	return $gallery->search(array('select' => ('[GalleryPermissionRelationship::userId], ' .
						   '[GalleryPermissionRelationship::permission] '),
				      'where' => '[GalleryPermissionRelationship::itemId] = ?'),
				array($itemId));
    }

}

