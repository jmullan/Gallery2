/**
 * Factory for creating GalleryGraphics instances
 *
 * @version $Id$
 * @package GalleryCore
 * @author Bharat Mediratta <bharat@menalto.com>
 * @abstract
 */
class GalleryGraphicsFactory {

    /**
     * Create a new GalleryGraphics instance of the correct type
     *
     * @param string the type of graphics object to create
     * @return a GalleryGraphics instance
     */
    function newInstance($identifier) {
	global $gallery;

	$implementations = $gallery->lookupRegistry('GalleryGraphicsFactory');
	foreach ($implementations as $impl) {
	    if ($impl['id'] == $identifier) {
		/* Load the file */
		require_once($impl['classFile']);
		
		if (class_exists($impl['className'])) {
		    /* Return the new class */
		    return array(GalleryStatus::success(), new $impl['className']);
		} else {
		    return array(GalleryStatus::error(ERROR_BAD_MODULE, __FILE__, __LINE__),
				 null);
		}
	    }
	}

	return array(GalleryStatus::error(ERROR_UNIMPLEMENTED,
					  __FILE__, __LINE__),
		     null);
    }

    /**
     * Return the ids of all the available implementations
     *
     * @return array string ids
     */
    function getAllImplementationIds() {
	global $gallery;

	$implementations = $gallery->lookupRegistry('GalleryGraphicsFactory');
	$ids = array();
	foreach ($implementations as $impl) {
	    $ids[] = $impl['id'];
	}

	return $ids;
    }
}
