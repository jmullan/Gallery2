/**
 * Factory for creating GalleryGraphics instances
 *
 * @version $Id$
 * @package GalleryCore
 * @author Bharat Mediratta <bharat@menalto.com>
 * @abstract
 */
class GalleryGraphicsFactory {

    /**
     * Create a new GalleryGraphics instance of the correct type
     *
     * @param string the type of graphics object to create
     * @return a GalleryGraphics instance
     */
    function newInstance($type, $config) {
	switch ($type) {
	case 'netpbm':
	    $base = dirname(__FILE__) . '/GalleryGraphics';
	    require_once($base . '/NetPbmGraphics.class');
	    return array(GalleryStatus::success(), new NetPbmGraphics($config));
	    
	default:
	    return array(GalleryStatus::error(ERROR_UNIMPLEMENTED,
					      __FILE__, __LINE__),
			 null);
	}
    }
}
