    /**
     * Search the persistent store for the target values matching the given criteria
     *
     * This is a flexible and powerful search mechanism.  You specify which
     * class members you wish to search for, how you want to search them, and
     * which class members you want returned.
     *
     * Right now we do a logical AND of all criteria.  Later on we should
     * extend this.
     *
     * Example criteria:
     * array(array('GalleryNucleus::parentId',
     *             'EXACT',
     *             $parentId),
     *       array('FileSystemNucleus::pathComponent',
     *             'EXACT',
     *             $path));
     *
     * Comparators can be 'EXACT' or 'CONTAINS'
     *
     * Example target:
     * array('GalleryNucleus::id')
     *
     * Example modifiers:
     * SEARCH_COUNT          -- return only the number of hits
     * SEARCH_LIMIT #        -- return only the first x hits
     * SEARCH_ORDER GalleryNucleus::id SEARCH_DIRECTION_UP
     *                       -- sort by id
     *
     * @access public
     * @param array the search criteria
     * @param array the target values (default GalleryNucleus::id)
     * @param array the modifiers
     * @return array object GalleryStatus a status code,
     *               array a list of target values
     */
    function search($criteriaArray, $targetArray, $modifiers) {
	if ($this->_connectionStatus != DATABASE_STATUS_FULLY_CONNECTED) {
	    return array(GalleryStatus::error(ERROR_DATABASE_CONNECTION,
					      __FILE__, __LINE__),
			 null);
	}

	$whereComponents = array();
	$modifierComponents = array();
	$targetTableList = array();
	$whereTableList = array();
	$targetMap = array();

	/*
	 * XXX: This is all MySQL specific and will need to get moved into the
	 * MySQLDatabaseStorage class eventually.
	 */
	if (!empty($modifiers)) {
	    foreach ($modifiers as $modifier) {
		switch($modifier[0]) {
		case SEARCH_COUNT:
		    $targetComponents[] = 'COUNT(*)';
		    $targetMap['COUNT(*)'] = 'count';
		    break;

		case SEARCH_LIMIT:
		    $modifierComponents['LIMIT'] = $modifier[1];
		    break;
		    
		case SEARCH_ORDER:
		    switch ($modifier[2]) {
		    case SEARCH_DIRECTION_UP:
			$dir = 'ASC';
			break;

		    case SEARCH_DIRECTION_DOWN:
			$dir = 'DESC';
			break;

		    default:
			return array(GalleryStatus::error(ERROR_BAD_PARAMETER,
							  __FILE__, __LINE__),
				     null);
		    }

		    list($ret, $tableName, $colName) =
			    $this->_memberNameToTableAndColumnName($modifier[1]);
		    if ($ret->isError()) {
			return array($ret, null);
		    }
		    
		    $modifierComponents['ORDER'] = 'BY ' .
			    $tableName . '.' . $colName .
			    ' ' . $dir;
		}
	    }
	}

	foreach ($targetArray as $target) {
	    list($ret, $tableName, $colName) =
		    $this->_memberNameToTableAndColumnName($target);
	    if ($ret->isError()) {
		return array($ret, null);
	    }

	    $targetTableList[$tableName] = 1;

	    /*
	     * If we're doing a SEARCH_COUNT then don't look for other
	     * targets.
	     */
	    if (empty($targetMap['COUNT(*)'])) {
		$targetComponents[] = $tableName. '.' . $colName;
		$targetMap[$colName] = $target;
	    }
	}
	
	foreach ($criteriaArray as $criteria) {
	    if (sizeof($criteria) != 3) {
		return array(GalleryStatus::error(ERROR_BAD_PARAMETER,
						  __FILE__, __LINE__),
			     null);
	    }
	    list($member, $compareType, $value) = $criteria;
	    
	    list($class, $member) = split('::', $member);
	    if (empty($class) || empty($member)) {
		return array(GalleryStatus::error(ERROR_BAD_PARAMETER,
						  __FILE__, __LINE__),
			     null);
	    }

	    $tableName = DATABASE_TABLE_PREFIX  . strtolower($class);
	    $colName = $this->prefixColumnName($member);
	    $whereTableList[$tableName] = 1;

	    // If it's in the WHERE, it has to be in the target.
	    $targetTableList[$tableName] = 1;

	    $criteriaCol = $tableName . '.' . $colName;
	    switch($compareType) {
	    case 'EXACT':
		if (empty($value) && !($value === 0)) {
		    $whereComponents[] = $criteriaCol . ' is NULL';
		} else {
		    $whereComponents[] = $criteriaCol . '=?';
		    $whereData[] = $value;
		}
		break;

	    case 'CONTAINS':
		$whereComponents[] = $criteriaCol . ' LIKE ?';
		$whereData[] = '%' . $value . '%';
		break;
		
	    default:
		return array(GalleryStatus::error(ERROR_BAD_PARAMETER,
						  __FILE__, __LINE__),
			     null);
	    }
	}

	if (sizeof($whereTableList) > 1) {
	    $idCol = $this->prefixColumnName('id');
	    $keys = array_keys($whereTableList);
	    for ($i = 1; $i < sizeof($keys); $i++) {
		$whereComponents[] =
			$keys[0] . '.' . $idCol . '=' .
			$keys[$i] . '.' . $idCol;
	    }
	}

	$query = 'SELECT ';
	$query .= join(', ', $targetComponents);
	$query .= ' FROM ';
	$query .= join(', ', array_keys($targetTableList));

	/* Tack on our WHERE clause, if applicable */
	if (sizeof($whereComponents)) {
	    $query .= ' WHERE ';
	    $query .= join(' AND ', $whereComponents);
	    $data = $whereData;
	} else {
	    $data = array();
	}

	/* Tack on our ORDER and LIMIT modifiers, in that order */
	foreach (array('ORDER', 'LIMIT') as $modifierName) {
	    if (!empty($modifierComponents[$modifierName])) {
		$query .= ' ' . $modifierName .
			' ' . $modifierComponents[$modifierName];
	    }
	}

	$this->_traceStart();
	$recordSet = $this->_db->Execute($query, $data);
	if (!$recordSet) {
	    return array(GalleryStatus::error(ERROR_DATABASE_FAILURE,
					      __FILE__, __LINE__),
			 null);
	}

	/* Push all our data into the map */
	$results = array();
	while (!$recordSet->EOF) {
	    $row = array();
	    foreach ($targetMap as $colName => $classMember) {
		$row[$classMember] = $recordSet->fields[$colName];
	    }
	    array_push($results, $row);
	    $recordSet->MoveNext();
	}

	$this->_traceStop();

	return array(GalleryStatus::success(), $results);
    }

    /**
     * Convert a member name to its table and column names
     *
     * @access private
     * @param string the member name
     * @param array object GalleryStatus a status code
     *              string the table name
     *              string the column name 
     */
    function _memberNameToTableAndColumnName($memberName) {
	list($class, $member) = split('::', $memberName);
	if (empty($class) || empty($member)) {
	    return GalleryStatus::error(ERROR_BAD_PARAMETER,
					__FILE__, __LINE__);
	}
	
	$tableName = DATABASE_TABLE_PREFIX  . strtolower($class);
	$colName = $this->prefixColumnName($member);

	return array(GalleryStatus::success(), $tableName, $colName);
    }

    /**
     * Initialize the DatabaseSchema instance
     *
     * @access private
     * @return object GalleryStatus a status code
     */
    function _initDatabaseSchema() {
	if (empty($this->_databaseSchema)) {
	    $base = dirname(__FILE__);
	    require_once($base . '/DatabaseSchema.class');
	    require_once($base . '/DatabaseSchemaFactory.class');
	    list($ret, $this->_databaseSchema) =
		    DatabaseSchemaFactory::newInstance($this->getType(),
						       $this->_db,
						       $this->_capabilities);

	    if ($ret->isError()) {
		return $ret;
	    }
	}

	return GalleryStatus::success();
    }

    /**
     * Create a new schema.
     *
     * @param string the name of the database to create
     * @return object GalleryStatus a status code
     */
    function createSchema() {
	if ($this->_connectionStatus != DATABASE_STATUS_FULLY_CONNECTED) {
	    return GalleryStatus::error(ERROR_DATABASE_CONNECTION,
					__FILE__, __LINE__);
	}

	$ret = $this->_initDatabaseSchema();
	if ($ret->isError()) {
	    return $ret;
	}
	
	$this->_traceStart();
	$ret = $this->_databaseSchema->createSchema();
	$this->_traceStop();

	return $ret;
    }

    /**
     * Bring the database schema up to date
     *
     * @return object GalleryStatus a status code
     */
    function updateSchema() {
	if ($this->_connectionStatus != DATABASE_STATUS_FULLY_CONNECTED) {
	    return GalleryStatus::error(ERROR_DATABASE_CONNECTION,
					__FILE__, __LINE__);
	}

	$ret = $this->_initDatabaseSchema();
	if ($ret->isError()) {
	    return $ret;
	}

	$this->_traceStart();
	$ret = $this->_databaseSchema->updateSchema();
	$this->_traceStop();

	return $ret;
    }

    /**
     * Create the database.
     *
     * Note that the database connection must not be attached to a specific
     * database for this to work.
     *
     * @param string the name of the database
     * @return object GalleryStatus a status code
     */
    function createDatabase() {
	if ($this->_connectionStatus != DATABASE_STATUS_PARTIALLY_CONNECTED) {
	    return GalleryStatus::error(ERROR_DATABASE_CONNECTION,
					__FILE__, __LINE__);
	}

	$ret = $this->_initDatabaseSchema();
	if ($ret->isError()) {
	    return $ret;
	}

	$this->_traceStart();
	$ret = $this->_databaseSchema->createDatabase($this->_database);
	$this->_traceStop();

	return $ret;
    }

    /**
     * Drop the database.
     *
     * Use this very carefully!
     *
     * Note that the database connection must not be attached to a specific
     * database for this to work.
     *
     * @param string the name of the database
     * @return object GalleryStatus a status code
     */
    function dropDatabase() {
	if ($this->_connectionStatus != DATABASE_STATUS_PARTIALLY_CONNECTED) {
	    return GalleryStatus::error(ERROR_DATABASE_CONNECTION,
					__FILE__, __LINE__);
	}

	$ret = $this->_initDatabaseSchema();
	if ($ret->isError()) {
	    return $ret;
	}

	$this->_traceStart();
	$ret = $this->_databaseSchema->dropDatabase($this->_database);
	$this->_traceStop();

	return $ret;
    }
	
    /**
     * Identify the type of nucleus associated with the id provided
     *
     * @param int a nucleus id
     * @return array a GalleryStatus and a string class name
     */
    function _identifyNucleus($id) {
	assert('!empty($id)');

	if (empty($this->_nucleusTypeCache[$id])) {
	    $idCol = $this->prefixColumnName('id');
	    $objectTypeCol = $this->prefixColumnName('objectType');
	    $table = DATABASE_TABLE_PREFIX  . 'gallerynucleus';
	    $query = 'SELECT ' . $objectTypeCol .
		    ' FROM ' . $table .
		    ' WHERE ' . $idCol . '=?';
	    $data = array($id);
	    $recordSet = $this->_db->Execute($query, $data);
	    
	    if ($recordSet) {
		if ($recordSet->RecordCount() == 1) {
		    $type = $recordSet->fields[$objectTypeCol];
		    $recordSet->Close();
		}
		
		if (empty($type)) {
		    return array(GalleryStatus::error(ERROR_MISSING_OBJECT,
						      __FILE__, __LINE__), null);
		} else {
		    $this->_nucleusTypeCache[$id] = $type;
		}
	    } else {
		return array(GalleryStatus::error(ERROR_DATABASE_FAILURE,
						  __FILE__, __LINE__),
			     null);
	    }
	}

	return array(GalleryStatus::success(), $this->_nucleusTypeCache[$id]);
    }

    /**
     * Translate a potentially unsafe column name into a safe one
     *
     * @param string the name of a column
     * @return string a safe column name
     */
    function prefixColumnName($columnName) {
	return DATABASE_COLUMN_PREFIX . "$columnName";
    }

    /**
     * Does the database software have the desired capability?
     *
     * @param string the name of the capability
     * @return bool true if yes
     */
    function _hasCapability($capabilityName) {
	return !empty($this->_capabilities[$capabilityName]);
    }
