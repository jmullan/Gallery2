/**
 * Factory for creating DatabaseStorage instances
 *
 * @package GalleryCore
 * @subpackage Storage
 * @abstract
 */
class DatabaseStorageFactory {

    /**
     * Create a new DatabaseStorage instance of the correct type
     *
     * @param string the type of storage object to create
     * @return a DatabaseStorage instance
     * @static
     */
    function newInstance($type, $config) {
	global $gallery;

	switch ($type) {
	case 'mysql':
	case 'mysqlt':
	    $base = dirname(__FILE__);
	    require_once($base . '/DatabaseStorage/MySqlDatabaseStorage.class');
	    return array(GalleryStatus::success(),
			 new MySqlDatabaseStorage($config));
	    
	case 'postgres':
	case 'postgres7':
	    $base = dirname(__FILE__);
	    require_once($base . '/DatabaseStorage/PostgreSqlDatabaseStorage.class');
	    return array(GalleryStatus::success(),
			 new PostgreSqlDatabaseStorage($config));
	    
	default:
	    return array(GalleryStatus::error(ERROR_UNIMPLEMENTED,
					      __FILE__, __LINE__,
					      "Unknown storage type '$type'"),
			 null);
	}
    }
}
