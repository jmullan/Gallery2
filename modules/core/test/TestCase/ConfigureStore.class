<?php

class ConfigureStoreTestCase extends TestCase {

    function getDescription() {
	global $gallery;
	$config = $gallery->getConfig('core.storage.config');
	return "Configure the G2 database called '$config[database]'";
    }

    function testStart() {
	global $gallery;

	$reply =& $gallery->getStorage();
	$ret = $reply[0];
	$storage =& $reply[1];
	if ($ret->isError()) {
	    return $ret->wrap(__FILE__, __LINE__);
	}
	
	return $storage->configureStore();
    }
}

?>
