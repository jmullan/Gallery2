<?php

class CreateStoreTestCase extends TestCase {

    function getDescription() {
	global $gallery;
	$config = $gallery->getConfig('core.storage.config');
	return "Create a new G2 database called '$config[database]'";
    }

    function testStart() {
	global $gallery;

	list($ret, $storage) = $gallery->getUninitializedStorage();
	if ($ret->isError()) {
	    return $ret->wrap(__FILE__, __LINE__);
	}
	
	return $storage->createStore();
    }
}

?>
