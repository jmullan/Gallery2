<?php

class CreateAlbumItemTestCase extends TestCase {

    function getDescription() {
	return "Create a new AlbumItem, save it, modify it, save it again";
    }

    function testStart() {
	$album = new AlbumItem();

	print("Creating new album item\n");
	$ret = $album->createRoot("test");

	if ($ret->isError()) {
	    $this->error($ret);
	    $album = null;
	    return $ret;
	}
	
	print("SAVE\n");
	$ret = $album->save();
	if ($ret->isError()) {
	    $this->error($ret);
	    return $ret;
	}

	global $gallery;
	$ret = $gallery->lockLocal(array($album->getId()));
	if ($ret->isError()) {
	    $this->error($ret);
	    return $ret;
	}

	$album->setRows(3);
	$childIds =& $album->getChildIds();
	$childIds->push(3);
	$childIds->unshift(5);
	print("SECOND SAVE\n");
	$ret = $album->save();
	if ($ret->isError()) {
	    $this->error($ret);
	    return $ret;
	}
	
	$album->setRows(0);
	$album->setDescription("This is a longish description with " .
				     "+=!@#$%^&*()_-|\\\"'?/>.<,}]{[~` chars in it");
	print("THIRD SAVE\n");
	$ret = $album->save();
	if ($ret->isError()) {
	    $this->error($ret);
	    return $ret;
	}

	return GalleryStatus::success();
    }
}

