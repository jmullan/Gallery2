<?php

class CreateAlbumItemTestCase extends TestCase {

    function getDescription() {
	return "Create a new AlbumItem, save it, modify it, save it again";
    }

    function testStart() {
	global $gallery;

	print("Creating new album item\n");
	$album = new AlbumItem();
	$ret = $album->createRoot("test",
				  $gallery->getActiveUserId());

	if ($ret->isError()) {
	    return $ret;
	}
	
	print("SAVE\n");
	$ret = $album->save();
	if ($ret->isError()) {
	    return $ret;
	}

	$ret = $gallery->lockLocal($album->getId());
	if ($ret->isError()) {
	    return $ret;
	}

	$album->setRows(3);
	$childIds =& $album->getChildIds();
	$childIds->push(3);
	$childIds->unshift(5);
	print("SECOND SAVE\n");
	$ret = $album->save();
	if ($ret->isError()) {
	    return $ret;
	}
	
	$album->setRows(0);
	$album->setDescription("This is a longish description with " .
				     "+=!@#$%^&*()_-|\\\"'?/>.<,}]{[~` chars in it");
	print("THIRD SAVE\n");
	$ret = $album->save();
	if ($ret->isError()) {
	    return $ret;
	}

	/* Leggo of our locks */
	$ret = $gallery->unlock();
	if ($ret->isError()) {
	    return $ret;
	}
	
	return GalleryStatus::success();
    }
}

