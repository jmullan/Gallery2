<?php

class CleanStoreTestCase extends TestCase {

    function getDescription() {
	global $gallery;
	$config = $gallery->getConfig('storage.config');
	return "Reset the G2 database called '$config[database]'.";
    }

    function testStart() {
	global $gallery;

	$storage = $gallery->getStorage();
	$ret = $storage->cleanStore();
	if ($ret->isError()) {
	    return $ret->wrap(__FILE__, __LINE__);
	}

	/*
	 * Reset the Gallery instance.  This will basically make Gallery
	 * unusable until InitializeGallery is called.
	 */
	$gallery->reset();
	
	return GalleryStatus::success();
    }
}

?>
