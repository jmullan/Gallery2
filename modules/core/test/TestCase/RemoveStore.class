<?php

class RemoveStoreTestCase extends TestCase {

    function getDescription() {
	global $gallery;
	$config = $gallery->getConfig('storage.config');
	return "Drop the G2 database called '$config[database]'";
    }

    function useDefaultDatabase() {
	return false;
    }

    function testStart() {
	global $gallery;

	list($ret, $storage) = $gallery->getStorage();
	if ($ret->isError()) {
	    return $ret->wrap(__FILE__, __LINE__);
	}
	
	return $storage->removeStore();
    }
}

?>
