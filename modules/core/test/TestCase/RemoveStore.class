<?php

class RemoveStoreTestCase extends TestCase {

    function getDescription() {
	global $gallery;
	$config = $gallery->getConfig('storage.config');
	return "Drop the G2 database called '$config[database]'";
    }

    function testStart() {
	global $gallery;

	list($ret, $storage) = $gallery->getUninitializedStorage();
	if ($ret->isError()) {
	    return $ret->wrap(__FILE__, __LINE__);
	}
	
	$ret = $storage->removeStore();
	if ($ret->isError()) {
	    return $ret->wrap(__FILE__, __LINE__);
	}

	/*
	 * Reset the Gallery instance.  This will basically make Gallery
	 * unusable until InitializeGallery is called.
	 */
	$gallery->reset();
	
	return GalleryStatus::success();
    }
}

?>
