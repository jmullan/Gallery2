<?php

class CreateAndDeleteAlbumItemTestCase extends TestCase {

    function getDescription() {
	return "Create a new AlbumItem and then delete it";
    }

    function testStart() {
	$album = new AlbumItem();

	print("Creating new album item\n");
	$ret = $album->createRoot("createAndDelete");
	$this->dump($ret, $album);
	
	if ($ret->isError()) {
	    $this->error($ret);
	    $album = null;
	    return $ret;
	}

	global $gallery;
	$ret = $gallery->lockWorld();
	if ($ret->isError()) {
	    $this->error($ret);
	    return $ret;
	}

	/* Add some properties */
	$properties =& $album->getProperties();
	$properties->set('banana', 'orange');
	$properties->set('look at me', serialize($this));
	$properties->set('password', md5('banana'));
	
	print("SAVE\n");
	$ret = $album->save();
	$this->dump($ret, $album);
	if ($ret->isError()) {
	    $this->error($ret);
	    return $ret;
	}

	print("DELETE\n");
	$ret = $album->delete();
	$this->dump($ret, $album);
	if ($ret->isError()) {
	    $this->error($ret);
	    return $ret;
	}

	return GalleryStatus::success();
    }
}

