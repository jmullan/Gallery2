/**
 * @package GalleryCore
 * @subpackage TestCase
 */
class GetChildrenTestCase extends TestCase {

    function getIterations() {
	return array(1, 5, 10, 100);
    }
     
    function getDescription() {
	return "Anonymous user's view of root's children";
    }

    function testStart($iterations) {
	global $gallery;

	list ($ret, $rootId) =
	    GalleryCoreApi::getPluginParameter('module', 'core', 'id.rootAlbum');
	if ($ret->isError()) {
	    return $ret->wrap(__FILE__, __LINE__);
	}

	$userId = $gallery->getActiveUserId();

	/* Load the root */
	list ($ret, $root) = GalleryCoreApi::loadEntitiesById($rootId);
	if ($ret->isError()) {
	    return $ret->wrap(__FILE__, __LINE__);
	}

	for ($i = 0; $i < $iterations; $i++) {
	    /* Get the child count */
	    list ($ret, $count) = GalleryCoreApi::fetchChildCounts(array($root->getId()));
	    if ($ret->isError()) {
		return $ret->wrap(__FILE__, __LINE__);
	    }

	    if ($gallery->getDebug()) {
		$gallery->debug("count: $count[$rootId]");
	    }

	    /* Get 'em all */ 
	    list ($ret, $childIds) = $root->fetchChildren();
	    if ($ret->isError()) {
		return $ret->wrap(__FILE__, __LINE__);
	    }

	    if ($gallery->getDebug()) {
		$gallery->debug_r($childIds);
	    }
	}
	
	return GalleryStatus::success();
    }
}

?>
