/**
 * Test Factory functionality
 */
class FactoryTest extends GalleryTestCase {

    function FactoryTest($methodName) {
	$this->GalleryTestCase($methodName);
    }

    function setUp() {
	parent::setUp();

	global $gallery;
	
	$path = $gallery->getConfig('code.gallery.modules') . 'core/test/phpunit/FactoryTest.class';
	GalleryFactory::registerImplementation('FactoryTest',
					       'FactoryTestDummy',
					       'FactoryTestDummyId',
					       $path,
					       array('dummy'));

	GalleryFactory::registerImplementation('FactoryTest',
					       'FactoryTestDummyIllegalPath',
					       'FactoryTestDummyIllegalPathId',
					       'ILLEGAL_PATH!',
					       array('dummyIllegal'));
    }

    function tearDown() {
	GalleryFactory::unregisterImplementation('FactoryTest',
						 'FactoryTestDummy');
	GalleryFactory::unregisterImplementation('FactoryTest',
						 'FactoryTestDummyIllegalPath');
    }

    /**
     * Register an implementation, try to create new instance but expect to get
     * a bad path.
     */
    function testNewInstanceIllegalPath() {
	list ($ret, $instance) = GalleryFactory::newInstance('FactoryTest', 'FactoryTestDummyIllegalPath');
	$this->assert($ret->getErrorCode() & ERROR_BAD_PATH);
    }

    /**
     * Register an implementation, create new instance
     */
    function testNewInstance() {
	list ($ret, $instance) = GalleryFactory::newInstance('FactoryTest', 'FactoryTestDummy');
	if ($ret->isError()) {
	    return $this->failWithStatus($ret->wrap(__FILE__, __LINE__));
	}
	
	$this->assert(is_object($instance));
    }

    /**
     * Register an implementation, try to create new instance but expect an
     * empty instance
     */
    function testMissingInstance() {
	list ($ret, $instance) = GalleryFactory::newInstance('FactoryTest', 'MISSING IMPLEMENTATION NAME');
	if ($ret->isError()) {
	    return $this->failWithStatus($ret->wrap(__FILE__, __LINE__));
	}
	
	$this->assert(!isset($instance));
    }

    /**
     * Register an implementation, create instance by hint
     */
    function testNewInstanceByHint() {
	list ($ret, $instance) = GalleryFactory::newInstanceByHint('FactoryTest', 'dummy');
	if ($ret->isError()) {
	    return $this->failWithStatus($ret->wrap(__FILE__, __LINE__));
	}
	
	$this->assert(is_object($instance));
    }

    /**
     * Register an implementation, create instance by id
     */
    function testNewInstanceById() {
	list ($ret, $instance) = GalleryFactory::newInstanceById('FactoryTest', 'FactoryTestDummyId');
	if ($ret->isError()) {
	    return $this->failWithStatus($ret->wrap(__FILE__, __LINE__));
	}
	
	$this->assert(is_object($instance));
    }
    
    /**
     * Register an implementation, get all implementation ids
     */
    function testGetAllImplementationIds() {
	$ids = GalleryFactory::getAllImplementationIds('FactoryTest');
	$this->assertEquals(array('FactoryTestDummyId' => 'factorytestdummy',
				  'FactoryTestDummyIllegalPathId' => 'factorytestdummyillegalpath'),
			    $ids);
    }
}

/**
 * Bogus class that we can feed to the factory
 */
class FactoryTestDummy {
}
