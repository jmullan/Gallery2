/**
 * Test ItemProperties functionality
 *
 * @package GalleryCore
 * @subpackage PHPUnit
 *
 */
class ItemPropertiesTest extends GalleryTestCase {
    var $_itemId;

    function ItemPropertiesTest($methodName) {
	$this->GalleryTestCase($methodName);
    }

    /**
     * Create a random album to start the test
     */
    function setUp() {
	parent::setUp();

	list ($ret, $this->_item) = $this->_createRandomAlbum($this->_getRootId());
	if ($ret->isError()) {
	    return $this->failWithStatus($ret->wrap(__FILE__, __LINE__));
	}
    }

    /**
     * Delete our temporary album
     */
    function tearDown() {
	$ret = GalleryCoreApi::deleteEntityById($this->_item->getId());
	if ($ret->isError()) {
	    return $this->failWithStatus($ret->wrap(__FILE__, __LINE__));
	}

	parent::tearDown();
    }

    /**
     * Test setting a property.  Exercises:
     *
     *   GalleryCoreApi::setItemProperty
     *   GalleryCoreApi::fetchItemProperty
     *
     */
    function testSetProperty() {
	$key = 'test-key';
	$value = 'test-value';

	$ret = GalleryCoreApi::setItemProperty($this->_item->getId(), $key, $value);
	if ($ret->isError()) {
	    return $this->failWithStatus($ret->wrap(__FILE__, __LINE__));
	}

	list ($ret, $newValue) = GalleryCoreApi::fetchItemProperty($this->_item->getId(), $key);
	if ($ret->isError()) {
	    return $this->failWithStatus($ret->wrap(__FILE__, __LINE__));
	}

	$this->assertEquals($value, $newValue);
    }

    /**
     * Test setting a property and then overwriting it.  Exercises:
     *
     *   GalleryCoreApi::setItemProperty
     *   GalleryCoreApi::fetchItemProperty
     *
     */
    function testUpdateProperty() {
	$key = 'test-key-' . rand();
	$value1 = 'test-value1';
	$value2 = 'test-value2';

	$ret = GalleryCoreApi::setItemProperty($this->_item->getId(), $key, $value1);
	if ($ret->isError()) {
	    return $this->failWithStatus($ret->wrap(__FILE__, __LINE__));
	}

	$ret = GalleryCoreApi::setItemProperty($this->_item->getId(), $key, $value2);
	if ($ret->isError()) {
	    return $this->failWithStatus($ret->wrap(__FILE__, __LINE__));
	}

	list ($ret, $newValue) = GalleryCoreApi::fetchItemProperty($this->_item->getId(), $key);
	if ($ret->isError()) {
	    return $this->failWithStatus($ret->wrap(__FILE__, __LINE__));
	}

	$this->assertEquals($value2, $newValue);
    }

    /**
     * Test setting properties and then removing them.  Exercises:
     *
     *   GalleryCoreApi::setItemProperty
     *   GalleryCoreApi::removeItemProperties
     *   GalleryCoreApi::fetchItemPropertyKeys
     *
     */
    function testRemoveProperties() {
	$key1 = 'test-key1';
	$value1 = 'test-value1';
	$key2 = 'test-key2';
	$value2 = 'test-value2';

	$ret = GalleryCoreApi::setItemProperty($this->_item->getId(), $key1, $value1);
	if ($ret->isError()) {
	    return $this->failWithStatus($ret->wrap(__FILE__, __LINE__));
	}

	$ret = GalleryCoreApi::setItemProperty($this->_item->getId(), $key2, $value2);
	if ($ret->isError()) {
	    return $this->failWithStatus($ret->wrap(__FILE__, __LINE__));
	}

	$ret = GalleryCoreApi::removeItemProperties($this->_item->getId());
	if ($ret->isError()) {
	    return $this->failWithStatus($ret->wrap(__FILE__, __LINE__));
	}

	GalleryDataCache::reset();

	list ($ret, $keys) = GalleryCoreApi::fetchItemPropertyKeys($this->_item->getId());
	if ($ret->isError()) {
	    return $this->failWithStatus($ret->wrap(__FILE__, __LINE__));
	}

	$this->assertEquals(array(), $keys);
    }

    /**
     * Test fetching property keys
     *
     *   GalleryCoreApi::setItemProperty
     *   GalleryCoreApi::fetchItemPropertyKeys
     *
     */
    function testFetchPropertyKeys() {
	$key1 = 'test-key1';
	$value1 = 'test-value1';
	$key2 = 'test-key2';
	$value2 = 'test-value2';

	$ret = GalleryCoreApi::setItemProperty($this->_item->getId(), $key1, $value1);
	if ($ret->isError()) {
	    return $this->failWithStatus($ret->wrap(__FILE__, __LINE__));
	}

	$ret = GalleryCoreApi::setItemProperty($this->_item->getId(), $key2, $value2);
	if ($ret->isError()) {
	    return $this->failWithStatus($ret->wrap(__FILE__, __LINE__));
	}

	GalleryDataCache::reset();

	list ($ret, $keys) = GalleryCoreApi::fetchItemPropertyKeys($this->_item->getId());
	if ($ret->isError()) {
	    return $this->failWithStatus($ret->wrap(__FILE__, __LINE__));
	}

	$this->assertEquals(2, sizeof($keys));
	$this->assert(($keys[0] == 'test-key1' && $keys[1] == 'test-key2') ||
		      ($keys[1] == 'test-key1' && $keys[0] == 'test-key2'));
    }

    /**
     * Test fetching all properties
     *
     *   GalleryCoreApi::setItemProperty
     *   GalleryCoreApi::fetchAllItemProperties
     */
    function testFetchAllProperties() {
	list ($ret, $keys) = GalleryCoreApi::fetchAllItemProperties($this->_item->getId());
	if ($ret->isError()) {
	    return $this->failWithStatus($ret->wrap(__FILE__, __LINE__));
	}
	$this->assertEquals(array(), $keys, 'no properties');

	$key1 = 'test-key1';
	$value1 = 'test-value1';
	$key2 = 'test-key2';
	$value2 = 'test-value2';

	$ret = GalleryCoreApi::setItemProperty($this->_item->getId(), $key1, $value1);
	if ($ret->isError()) {
	    return $this->failWithStatus($ret->wrap(__FILE__, __LINE__));
	}

	$ret = GalleryCoreApi::setItemProperty($this->_item->getId(), $key2, $value2);
	if ($ret->isError()) {
	    return $this->failWithStatus($ret->wrap(__FILE__, __LINE__));
	}

	GalleryDataCache::reset();

	list ($ret, $keys) = GalleryCoreApi::fetchAllItemProperties($this->_item->getId());
	if ($ret->isError()) {
	    return $this->failWithStatus($ret->wrap(__FILE__, __LINE__));
	}

	$this->assertEquals(array('test-key1' => 'test-value1',
				  'test-key2' => 'test-value2'),
			    $keys, 'two properties');
    }
}

?>
