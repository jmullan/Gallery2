    function testCompareIdentifiers() {
	$this->assertEquals(1, GallerySession::_compareIdentifiers(array(0), array(0)));
	$this->assertEquals(1, GallerySession::_compareIdentifiers(array(0), array(0, 1)));
	$this->assertEquals(1, GallerySession::_compareIdentifiers(array(0, 1), array(0)));
	$this->assertEquals(2, GallerySession::_compareIdentifiers(array('x', 1, 'y'),
								   array('x', 0, 'y')));
	$this->assertEquals(0, GallerySession::_compareIdentifiers(array(1), 'x'));
	$this->assertEquals(0, GallerySession::_compareIdentifiers(array(1), null));
	$this->assertEquals(0, GallerySession::_compareIdentifiers(null, array(1)));
	$this->assertEquals(0, GallerySession::_compareIdentifiers(null, null));
	$this->assertEquals(0, GallerySession::_compareIdentifiers('x', 'x'));
    }

    /*
     * Test if G2 creates cookies with the correct domain / path and name
     * Doing an actual HTTP request because there is no reliable method to check what headers have
     * been sent.
     */
    function testSessionCookieHeader() {
	global $gallery;
	$session =& $gallery->getSession();
	$urlGenerator =& $gallery->getUrlGenerator();
	$url = $urlGenerator->getCurrentUrl();
	/* Strip of the /lib/tools/test/ part to get a valid G2 request uri */
	$url = preg_replace('|^(.*/)lib/tools/.*$|', '$1', $url);
	list ($body, $response, $headers) = GalleryCoreApi::fetchWebPage($url);
	$this->assertEquals($response, 'HTTP/1.1 200 OK', 'Could not retrieve G2 page');
	$this->assertEquals(true, isset($headers['Set-Cookie']), 'Set-Cookie header not set');
	if (isset($headers['Set-Cookie'])) {
	    /* There can be multiple set-cookie headers, find the correct one */
	    if (!is_array($headers['Set-Cookie'])) {
		$cookie = $headers['Set-Cookie'];
	    } else {
		foreach ($headers['Set-Cookie'] as $setcookie) {
		    if (strpos($setcookie, SESSION_ID_PARAMETER) !== false) {
			$cookie = $setcookie;
			break;
		    }
		}
	    }
	}
	if (isset($cookie)) {
	    /* Cookie path should be set to '/' */
	    $this->assertEquals(1, preg_match('/path=\/(?:[,;].*)?$/i', $cookie),
				'Wrong cookie path in cookie: "' . $cookie . '"');
	    /* Cookie domain should be .example.com or not set */
	    $cookieDomain = $session->getCookieDomain();
	    if (!empty($cookieDomain)) {
		/* escape dots in cookieDomain */
		$cookieDomain = str_replace('.', '\\.', $cookieDomain);
		$this->assertEquals(1, preg_match('/domain= ' . $cookieDomain . '(?:[,;].*)?$/i',
						  $cookie),
				    'Wrong cookie domain in cookie: "' . $cookie . '"');
	    }
	} else {
	    $this->assert(0, 'G2 session cookie does not exist!');
	}
    }
    
    /*
     * Test for various host strings if the correct cookie domain is generated.
     */
    function testSessionCookieDomain() {
	/* Format: host => host for test case x, er => expected result of the test */
	$testCases = array();
	$testCases[] = array('host' => 'localhost', 'er' => '');
	$testCases[] = array('host' => 'localhost:80', 'er' => '');
	$testCases[] = array('host' => 'user:pass@localhost:80', 'er' => '');
	$testCases[] = array('host' => 'example.com', 'er' => '.example.com');
	$testCases[] = array('host' => 'www.example.com', 'er' => '.example.com');
	$testCases[] = array('host' => 'foo.bar.example.com', 'er' => '.example.com');
	$testCases[] = array('host' => 'www.example.com:8080', 'er' => '.example.com');
	$testCases[] = array('host' => 'user:pass@foo.example.com:8080', 'er' => '.example.com');
	$testCases[] = array('host' => '127.0.0.1', 'er' => '');
	$testCases[] = array('host' => '127.0.0.1:8080', 'er' => '');
	$testCases[] = array('host' => 'user:pass@127.0.0.1', 'er' => '');
	
	/* Backup things that we will overwrite during the test */
	foreach ($this->_originalServerVars['keys'] as $key) {
	    unset($_SERVER[$key]);
	}
	
	/* Create a test session with cookie support put well known data in it. */
	$_SERVER['HTTP_USER_AGENT'] = 'TEST_USER_AGENT';
	$_SERVER['REMOTE_ADDR'] = '1.2.3.4';
	
	$session = new GallerySession();
	$ret = $session->init();
	if ($ret->isError()) {
	    return $this->failWithStatus($ret->wrap(__FILE__, __LINE__));
	}
	
	/*
	 * Generate for each of the test cases the cookie domain and compare it to the expected
	 * result
	 */
	foreach ($testCases as $testCase) {
	    $_SERVER['HTTP_HOST'] = $testCase['host'];
	    
	    /* Reset session to clear the cached cookieDomain */
	    $ret = $session->reset();
	    if ($ret->isError()) {
		return $this->failWithStatus($ret->wrap(__FILE__, __LINE__));
	    }
	    
	    /* Do the actual test */
	    $this->assertEquals($testCase['er'], $session->getCookieDomain(),
				'Failed for host string "' . $testCase['host'] . '"!');
	}
	
	$ret = $session->reset();
	if ($ret->isError()) {
	    return $this->failWithStatus($ret->wrap(__FILE__, __LINE__));
 	}
    }
}
