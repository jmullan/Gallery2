class TestLayoutId2Layout {

    function init() {
	return GalleryStatus::success();
    }

    function &getMap() {
	static $map;
	if (!isset($map)) {
	    $map = array();
	}
	return $map;
    }

    function setParameter($key, $value) {
	$map =& $this->getMap();
	$map[$key] = $value;
	return GalleryStatus::success();
    }

    /**
     * @see GalleryLayout::getSettings()
     */
    function getSettings($itemId=0) {
	global $gallery;

	$settings = array();
	$settings[] = array('key' => 'rows',
			    'name' => 'Rows per album page',
			    'type' => 'text-field',
			    'type-params' => array('size' => 2),
			    'values' => array(4));
	$settings[] = array('key' => 'columns',
			    'name' => 'Columns per album page',
			    'type' => 'text-field',
			    'type-params' => array('size' => 2),
			    'values' => array(3));
	return array(GalleryStatus::success(), $settings);
    }

    /**
     * @see GalleryLayout::validateSettings
     */
    function validateSettings($settings) {
	return array();
    }

    function getName() {
	return 'Test Layout 2';
    }
}

class AdminLayoutsTestPlatform {

    function opendir($path) {
	global $gallery;
	if ($path == $gallery->getConfig('code.gallery.layouts')) {
	    return 'TEST_VALID_RESOURCE';
	} else {
	    return null;
	}
    }

    function readdir($path) {
	static $paths;
	if (!isset($paths)) {
	    $paths = array('.',
			   '..',
			   'testLayoutId1',
			   'testLayoutId2');
	}

	if ($path == 'TEST_VALID_RESOURCE') {
	    if (empty($paths)) {
		$paths = null;
		return null;
	    } else {
		return array_shift($paths);
	    }
	}
    }

    function closedir($path) {
    }

    function file_exists($path) {
	global $gallery;
	
	$base = $gallery->getConfig('code.gallery.layouts');
	switch($path) {
	case $base . 'testLayoutId1/layout.inc':
	case $base . 'testLayoutId2/layout.inc':
	case $base . 'anotherTestLayoutId/layout.inc':
	    return 1;

	default:
	    return 0;
	}
    }

    function is_dir($path) {
	global $gallery;
	
	$base = $gallery->getConfig('code.gallery.layouts');
	switch($path) {
	case $base . 'testLayoutId1':
	case $base . 'testLayoutId2':
	case $base . 'anotherTestLayoutId':
	    return 1;

	default:
	    return 0;
	}
    }
}
