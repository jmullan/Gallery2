/**
 * Test Status functionality
 *
 * @package GalleryCore
 * @subpackage PHPUnit
 *
 */
class StatusTest extends GalleryTestCase {

    function StatusTest($methodName) {
	$this->GalleryTestCase($methodName);
    }

    function testGetErrorCodeConstantsNoSpecificError() {
	$codes = GalleryStatus::getErrorCodeConstants(GALLERY_ERROR);
	$this->assertEquals(array('GALLERY_ERROR'), $codes);
    }

    function testGetErrorCodeConstantsSucess() {
	$codes = GalleryStatus::getErrorCodeConstants(GALLERY_SUCCESS);
	$this->assertEquals(array('GALLERY_SUCCESS'), $codes);
    }

    function testGetErrorCodeConstantsTwoErrors() {
	$codes = GalleryStatus::getErrorCodeConstants(ERROR_COLLISION | ERROR_LOCK_IN_USE);
	$expected = array('ERROR_COLLISION', 'ERROR_LOCK_IN_USE');
	$this->assertEquals(sort($expected), sort($codes));
    }
}
