/**
 * Test Child functionality
 *
 * @package GalleryCore
 * @subpackage PHPUnit
 *
 */
class ChildTest extends GalleryTestCase {

    function ChildTest($methodName) {
	$this->GalleryTestCase($methodName);
    }

    function setUp() {
	parent::setUp();

	/* Create a little tree of mixed items/entities */
	list ($ret, $this->_root) = $this->_createRandomAlbum(null);
	if ($ret->isError()) {
	    return $this->failWithStatus($ret->wrap(__FILE__, __LINE__));
	}

	for ($i = 0; $i < 2; $i++) {
	    list ($ret, $this->_child[$i]) = $this->_createRandomAlbum($this->_root->getId());
	    if ($ret->isError()) {
		return $this->failWithStatus($ret->wrap(__FILE__, __LINE__));
	    }

	    for ($j = 0; $j < 2; $j++) {
		list ($ret, $this->_derivative[$i][$j]) =
		    $this->_createDerivative($this->_child[$i]->getId(), DERIVATIVE_TYPE_IMAGE_RESIZE);
		if ($ret->isError()) {
		    return $this->failWithStatus($ret->wrap(__FILE__, __LINE__));
		}
	    }
	}
    }

    function tearDown() {
	global $gallery;

	$ret = $gallery->deleteEntityById($this->_root->getId());
	if ($ret->isError()) {
	    return $this->failWithStatus($ret->wrap(__FILE__, __LINE__));
	}
	
	parent::tearDown();
    }

    function testFetchParentIds() {
	list ($ret, $parentIds) =
	    GalleryChildEntityHelper::fetchParentIds($this->_derivative[0][0]->getId());
	if ($ret->isError()) {
	    return $this->failWithStatus($ret->wrap(__FILE__, __LINE__));
	}

	$this->assertEquals(array($this->_root->getId(),
				  $this->_child[0]->getId()),
			    $parentIds);
    }

    function testFetchChildIds() {
	list ($ret, $childIds) = GalleryChildEntityHelper::fetchChildIds($this->_root->getId());
	if ($ret->isError()) {
	    return $this->failWithStatus($ret->wrap(__FILE__, __LINE__));
	}

	sort($childIds);
	$this->assertEquals(array($this->_child[0]->getId(),
				  $this->_child[1]->getId()),
			    $childIds,
			    "root children");

	for ($i = 0; $i < 2; $i++) {
	    list ($ret, $childIds) = GalleryChildEntityHelper::fetchChildIds($this->_child[$i]->getId());
	    if ($ret->isError()) {
		return $this->failWithStatus($ret->wrap(__FILE__, __LINE__));
	    }

	    sort($childIds);
	    $this->assertEquals(array($this->_derivative[$i][0]->getId(),
				      $this->_derivative[$i][1]->getId()),
				$childIds,
				"child $i's children");
	}
    }

}

