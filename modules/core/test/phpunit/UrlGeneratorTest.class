/**
 * Test UrlGenerator functionality
 *
 * @package GalleryCore
 * @subpackage PHPUnit
 *
 */
class UrlGeneratorTest extends GalleryTestCase {
    var $_urlGenerator;

    function UrlGeneratorTest($methodName) {
	$this->GalleryTestCase($methodName);
    }

    function setUp() {
	$this->_urlGenerator = new GalleryUrlGenerator('dir/', 'test.php');
	parent::setUp();
    }

    function testGenerateUrl() {
	global $gallery;
	
	$actual = $this->_urlGenerator->generateUrl(array('a' => 123,
							  'b' => 'bBbB',
							  'c' => serialize(array(1, 2, 3))));
	
	$values = array('g2_a=123',
			'g2_b=bBbB',
			'g2_c=a%3A3%3A%7Bi%3A0%3Bi%3A1%3Bi%3A1%3Bi%3A2%3Bi%3A2%3Bi%3A3%3B%7D');

	// If we're not using cookies, expect there to be an additional value
	$session = $gallery->getSession();
	if (!$session->isUsingCookies()) {
	    list ($sessionKey, $sessionId) = $session->getSessionDescriptor();
	    $values[] = GALLERY_FORM_VARIABLE_PREFIX . $sessionKey . '=' . $sessionId;
	}
	$expected = 'dir/test.php?' . join('&amp;', $values);

	$this->assertEquals($expected, $actual);
    }
}

