/**
 * Test Mime type functionality
 *
 * @package GalleryCore
 * @subpackage PHPUnit
 */
class MimeTest extends GalleryTestCase {

    function MimeTest($methodName) {
	$this->GalleryTestCase($methodName);
    }

    /**
     *
     */
    function setUp() {
	global $gallery;
	parent::setUp();
    }

    /**
     *
     */
    function tearDown() {
	parent::tearDown();
    }

    function testGetMimeType() {
	$this->assertEquals('image/jpeg', GalleryCoreApi::getMimeType('file.jpg'));
    }
    
    function testConvertExtensionToMime() {
	$this->assertEquals('image/jpeg',
			    GalleryCoreApi::convertExtensionToMime('jpg'));
	$this->assertEquals('image/jpeg',
			    GalleryCoreApi::convertExtensionToMime('JPG'));
    }

    function testConvertMimeToExtension() {
	$this->assertEquals('jpg', GalleryCoreApi::convertMimeToExtension('image/jpeg'));
	$this->assertEquals('avi', GalleryCoreApi::convertMimeToExtension('video/x-msvideo'));
    }

    function testGetMimeTypeMap() {
	$mimeMap = GalleryCoreApi::getMimeTypeMap();
	$this->assertEquals(array('jpe', 'jpeg', 'jpg'), $mimeMap['image/jpeg']);
	$this->assertEquals(array('avi'), $mimeMap['video/x-msvideo']);
    }
    
    function testIsViewableMimeType() {
	$this->assertEquals(true, GalleryCoreApi::isViewableMimeType('image/jpeg'));
	$this->assertEquals(false, GalleryCoreApi::isViewableMimeType('image/tiff'));
    }
}
