	GalleryUtilities::putRequestVariable('itemId', $this->_getUnusedId());

	list ($ret, $rootAlbum) = GalleryCoreApi::loadEntitiesById($this->_getRootId(),
								   'GalleryAlbumItem');
	if ($ret) {
	    return $ret;
	}
	list ($ret, $expectedThemeId) = GalleryCoreApi::fetchThemeId($rootAlbum);
	if ($ret) {
	    return $ret;
	}

	$template = new GalleryTemplate('');
	list ($ret, $themeId) = $template->_getThemeId();
	if ($ret) {
	    return $ret;
	}

	$this->assertEquals($expectedThemeId, $themeId, 'wrong themeid');
    }

