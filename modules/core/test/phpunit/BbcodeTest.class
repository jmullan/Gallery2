require_once(dirname(__FILE__) . '/../../../../lib/smarty_plugins/modifier.bbcode.php');

/**
 * Test Bbcode functionality
 *
 * @package GalleryCore
 * @subpackage PHPUnit
 *
 */
class BbcodeTest extends GalleryTestCase {

    function BbcodeTest($methodName) {
	$this->GalleryTestCase($methodName);
    }

    /**
     * @see GalleryTestCase::setUp
     */
    function setUp() {
	global $gallery;
	parent::setUp();
    }

    /**
     * @see GalleryTestCase::tearDown
     */
    function tearDown() {
	parent::tearDown();
    }

    function testBold() {
	$results = smarty_modifier_bbcode("[b]bold[/b]");
	$this->assertEquals("<b>bold</b>", $results);
    }

    function testItalic() {
	$results = smarty_modifier_bbcode("[i]italic[/i]");
	$this->assertEquals("<i>italic</i>", $results);
    }

    function testList() {
	$results = smarty_modifier_bbcode("[list][*]one[*]two[*]three[/list]");
	$this->assertEquals("<ul><li>one</li>\n<li>two</li>\n<li>three</li>\n</ul>", $results);
    }

    function testLineBreaks() {
	$results = smarty_modifier_bbcode("foo\r\nbar\rbaz\n");
	$this->assertEquals("foo<br />\nbar<br />\nbaz<br />\n", $results);
    }

    function testHtmlSpecialChars() {
	$results = smarty_modifier_bbcode("<script language=\"javascript\">evil!</script>");
	$this->assertEquals("&lt;script language=&quot;javascript&quot;&gt;evil!&lt;/script&gt;", $results);
    }

    function testLineEndings() {
	$results = smarty_modifier_bbcode("foo\nbar\nbaz\n");
	$this->assertEquals("foo<br />\nbar<br />\nbaz<br />\n", $results);
    }

    function testStripLastLineBreak() {
	$results = smarty_modifier_bbcode("[list][*]one\ntwo\n[*]three[*]four\n[/list]");
	$this->assertEquals("<ul><li>one<br />\ntwo<br /></li>\n<li>three</li>\n<li>four<br /></li>\n</ul>", $results);
    }

    function testImage() {
	$results = smarty_modifier_bbcode("[img]http://example.com/foo.gif[/img]");
	$this->assertEquals("<img src=\"http://example.com/foo.gif\" alt=\"\">", $results);
    }

    function testUrl1() {
	$results = smarty_modifier_bbcode("[url]http://example.com/a.html[/url]");
	$this->assertEquals("<a href=\"http://example.com/a.html\">http://example.com/a.html</a>", $results);
    }

    function testUrl2() {
	$results = smarty_modifier_bbcode("[url=http://example.com/a.html]content[/url]");
	$this->assertEquals("<a href=\"http://example.com/a.html\">content</a>", $results);
    }
}

?>
