	global $gallery;

	$valueMap = array('permissions.directory' => 'x1',
			  'permissions.file' => 'x2',
			  'exec.expectedStatus' => 'x3',
			  'default.orderBy' => 'x4',
			  'default.orderDirection' => 'x5',
			  'default.layout' => 'x6',
