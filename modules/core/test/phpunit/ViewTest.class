/**
 * Test GalleryView functionality
 *
 * @package GalleryCore
 * @subpackage PHPUnit
 *
 */
class ViewTest extends GalleryTestCase {

    var $_wasActive;
    var $_module;

    function ViewTest($methodName) {
	$this->GalleryTestCase($methodName);
    }

    function setUp() {
	parent::setUp();

	list($ret, $this->_module) = GalleryCoreApi::loadPlugin('module', 'comment');
	if ($ret->isError()) {
	    return array($ret->wrap(__FILE__, __LINE__), null);
	}

	list ($ret, $this->_wasActive) = $this->_module->isActive();
	if ($ret->isError()) {
	    return array($ret->wrap(__FILE__, __LINE__), null);
	}
    }

    function tearDown() {
	list ($ret, $isActive) = $this->_module->isActive();
	if ($ret->isError()) {
	    return array($ret->wrap(__FILE__, __LINE__), null);
	}
	$ret = null;
	if ($isActive && ! $this->_wasActive) {
	    list ($ret, $status) = $this->_module->deactivate();
	} elseif (! $isActive && $this->_wasActive) {
	    list ($ret, $status) = $this->_module->activate();
	}
	if ($ret && $ret->isError()) {
	    return array($ret->wrap(__FILE__, __LINE__), null);
	}
	parent::tearDown();
    }

    function testLoadViewSuccess() {
	list ($ret, $status) = $this->_module->activate();
	if ($ret->isError()) {
	    return $this->failWithStatus($ret->wrap(__FILE__, __LINE__));
	}
	
	require_once(dirname(__FILE__) . '/../../classes/GalleryView.class');
	list ($ret, $view) = GalleryView::loadView('comment:AddComment');
	if ($ret->isError()) {
	    return $this->failWithStatus($ret->wrap(__FILE__, __LINE__));
	}
    }

    function testLoadViewFail() {
	list ($ret, $status) = $this->_module->deactivate();
	if ($ret->isError()) {
	    return $this->failWithStatus($ret->wrap(__FILE__, __LINE__));
	}

	require_once(dirname(__FILE__) . '/../../classes/GalleryView.class');
	list ($ret, $view) = GalleryView::loadView('comment:AddComment');
	if ($ret->isError() && $ret->getErrorCode() & ERROR_PERMISSION_DENIED) {
	    // this is what we expect
	} else {
	    $this->assert(false, 'The view of a deactivated module should not load.');
	}
    }
}

