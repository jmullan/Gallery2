/**
 * Test MP3AudioRenderer functionality
 *
 * @package MP3Audio
 * @subpackage PHPUnit
 */
class MP3AudioRendererTest extends GalleryTestCase {

    function MP3AudioRendererTest($methodName) {
	$this->GalleryTestCase($methodName);
    }

    function setUp() {
	parent::setUp();

	list ($ret, $this->_renderer) =
	    GalleryCoreApi::newFactoryInstance('GalleryRenderer', 'MP3AudioRenderer');
	if ($ret) {
	    print $ret->getAsHtml();
	    return $this->failWithStatus($ret);
	}

	list ($ret, $this->_item) = $this->_createRandomDataItem($this->_getRootId(), 'audio/mpeg');
	if ($ret) {
	    print $ret->getAsHtml();
	    return $this->failWithStatus($ret);
	}
	$this->_markForCleanup($this->_item);
    }

    function testCanBeViewedInline() {
	list ($ret, $item) = GalleryCoreApi::newItemByMimeType('image/jpeg');
	if ($ret) {
	    return $this->failWithStatus($ret);
	}
	$item->setMimeType('image/jpeg');
	$item->setWidth(100);
	$item->setHeight(100);
	$this->assert(!$this->_renderer->canBeViewedInline($item), 'jpeg');

	list ($ret, $item) = GalleryCoreApi::newItemByMimeType('audio/wav');
	if ($ret) {
	    return $this->failWithStatus($ret);
	}
	$item->setMimeType('audio/wav');
	$this->assert(!$this->_renderer->canBeViewedInline($item), 'wav');

	list ($ret, $item) = GalleryCoreApi::newItemByMimeType('audio/mpeg');
	if ($ret) {
	    return $this->failWithStatus($ret);
	}
	$item->setMimeType('audio/mpeg');
	$this->assert($this->_renderer->canBeViewedInline($item), 'mp3');

	$this->assert($this->_renderer->canBeViewedInline($this->_item), 'mp3 item');
    }

    function testRender() {
	$html = $this->_renderer->render('HTML', $this->_item, $this->_item,
					 array('fallback' => 'FALLBACK'));
	$this->assert(strpos($html, '<object') !== false, '<object');
	$this->assert(strpos($html, '.swf'), '.swf');
	$this->assert(strpos($html, 'http'), 'http');
	$this->assert(strpos($html, (string)$this->_item->getId()), 'itemId');
    }
}
