/**
 * Debug status formatter.  
 *
 * @package Debug
 * @subpackage Classes
 */
class DebugStatusFormatter {

    /**
     * @see GalleryStatusFormatter::format
     */
    function format($codes, $trace, $message=null) {
	require_once(dirname(__FILE__) . '/../../core/classes/GalleryTemplate.class');
	$template = new GalleryTemplate(dirname(__FILE__));
	$template->setVariable('l10Domain', 'modules_debug');
	$template->setVariable('codes', join(" ", $codes));
	$template->setVariable('message', htmlentities($message));
	$template->setVariable('trace', $trace);
	list ($ret, $html) = $template->fetch('gallery:templates/DebugStatusFormatter.tpl');
	if ($ret->isError()) {
	    return $ret->getAsHtml();
	} else {
	    return $html;
	}
    }
    
}
