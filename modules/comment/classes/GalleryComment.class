/**
 * A GalleryEntity for comments.
 *
 * GalleryComments are basically just structured text objects.
 *
 * @g2 <class-name>GalleryComment</class-name>
 * @g2 <schema>
 * @g2   <schema-major>1</schema-major>
 * @g2   <schema-minor>0</schema-minor>
 * @g2 </schema>
 * @g2 <requires-id/>
 *
 * @version $Id$
 * @package GalleryCore
 * @author Bharat Mediratta <bharat@menalto.com>
 */
class GalleryComment_core extends GalleryChildEntity {

    /*
     * ****************************************
     *                 Members
     * ****************************************
     */

    /**
     * Name of the commenter
     *
     * @g2 <member>
     * @g2   <member-name>name</member-name>
     * @g2   <member-type>STRING</member-type>
     * @g2   <member-size>MEDIUM</member-size>
     * @g2 </member>
     *
     * @var $_name
     * @access private
     */
    var $_name;

    /**
     * Email address of the commenter
     *
     * @g2 <member>
     * @g2   <member-name>emailAddress</member-name>
     * @g2   <member-type>STRING</member-type>
     * @g2   <member-size>MEDIUM</member-size>
     * @g2 </member>
     *
     * @var $_emailAddress
     * @access private
     */
    var $_emailAddress;

    /**
     * Hostname of the commenter
     *
     * @g2 <member>
     * @g2   <member-name>hostname</member-name>
     * @g2   <member-type>STRING</member-type>
     * @g2   <member-size>MEDIUM</member-size>
     * @g2 </member>
     *
     * @var $_hostname
     * @access private
     */
    var $_hostname;

    /**
     * Text of the comment
     *
     * @g2 <member>
     * @g2   <member-name>comment</member-name>
     * @g2   <member-type>TEXT</member-type>
     * @g2   <indexed/>
     * @g2 </member>
     *
     * @var $_comment
     * @access private
     */
    var $_comment;

    /**
     * Date of the comment
     *
     * @g2 <member>
     * @g2   <member-name>date</member-name>
     * @g2   <member-type>TIMESTAMP</member-type>
     * @g2 </member>
     *
     * @var $_date
     * @access private
     */
    var $_date;

    /*
     * ****************************************
     *                 Methods
     * ****************************************
     */

}

include(dirname(__FILE__) . '/interfaces/GalleryComment.inc');
?>
