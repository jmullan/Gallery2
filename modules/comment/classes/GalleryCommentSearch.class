/**
 * This is an implementation of the search module's SearchInterface_1_0
 */
class GalleryCommentSearch extends GallerySearchInterface_1_0 {

    /**
     * @see GallerySearchInterface_1_0.getSearchModuleInfo()
     */
    function getSearchModuleInfo() {
	global $gallery;

	list ($ret, $module) = $gallery->loadModule('comment');
	if ($ret->isError()) {
	    return array($ret->wrap(__FILE__, __LINE__), null);
	}

	$info = array('name' => $module->translate('Comments'),
		      'description' => $module->translate('Comment Module'),
		      'options' => array('comments' => array('description' => $module->translate('Search comments'),
							     'enabled' => 1)));
	return array(GalleryStatus::success(), $info);
    }

    /**
     * @see GallerySearchInterface_1_0.search()
     */
    function search($options, $criteria, $limit=null) {
	global $gallery;

	$data = array();
	foreach (array('comments' => '[GalleryComment::comment]')
		 as $key => $column) {

	    if (isset($options[$key])) {
		$whereList[] = "$column LIKE ?";
		$data[] = '%' . $criteria . '%';
	    }
	}
	$where = join(' OR ', $whereList);

	/*
	('SELECT   [GalleryChildEntity::parentId] ' .
	 'FROM     [GalleryChildEntity], [GalleryComment], [GalleryItem], [GalleryEntity] '.
	 'WHERE    (([GalleryChildEntity::id] = [GalleryComment::id]) '.
	 '          AND ([GalleryChildEntity::parentId] = [GalleryItem::id]) '.
	 '          AND ([GalleryChildEntity::parentId] = [GalleryEntity::id])) ' .
	 'ORDER BY [GalleryEntity::modificationTimestamp] DESC',
	 'HAVING
	*/
	 
	/* Factor in item permissions */
	list ($permissionWhere, $permissionData) =
	    GalleryItemHelper::getViewPermissionClause($gallery->getActiveUserId());
	$where = $where . ' AND ' . $permissionWhere;
	$data = array_merge($data, $permissionData);

	/* Make sure we have permission to view the item's comment, also */
	list ($ret, $permissionBits) =
	    GalleryPermissionSetMap::convertIdsToBits('comment.view');
	if ($ret->isError()) {
	    return array($ret->wrap(__FILE__, __LINE__), null);
	}

	$where .= ' AND [GalleryPermissionMap::permission] & ? ';
	$data[] = $permissionBits;

	/*
	 * We're going to be selecting all the child entities but we care about
	 * the permissions of the parent item, so we need to join
	 * GalleryChildEntity::parentId against GalleryItem::id.  Since this is
	 * a non-standard entity join, we have to override the entity joins
	 * that the DatabaseStorage layer gives us for free and do all the
	 * joins ourself (ugh).
	 */
	$joins = ('((g2_GalleryChildEntity.g_id = g2_GalleryComment.g_id) ' .
		  'AND (g2_GalleryChildEntity.g_parentId = g2_GalleryItem.g_id) ' .
                  'AND (g2_GalleryChildEntity.g_parentId = g2_GalleryEntity.g_id))');
	$where = $where . ' AND ' . $joins;

	list ($ret, $results) = 
	    $gallery->search(array('select' => '[GalleryChildEntity::parentId]',
				   'where' => $where,
				   'order-by' => '[GalleryEntity::modificationTimestamp] DESC',
				   'limit' => array('offset' => 0, 'count' => $limit),
				   'no-implicit-joins' => 1,
				   'boolean-operator' => 'OR'),
			     $data);
	if ($ret->isError()) {
	    return array($ret->wrap(__FILE__, __LINE__), null);
	}

	$itemIds = array();
	while ($result = $results->nextResult()) {
	    $itemIds[] = $result[0];
	}
	
	return array(GalleryStatus::success(), $itemIds);
    }
}
