/**
 * @package Comment
 * @subpackage TestCase
 */
class ConfigureCommentTestCase extends TestCase {
    var $_moduleId = 'comment';

    function getDescription() {
	return "Configure the $this->_moduleId module";
    }

    function testStart() {
	global $gallery;

	list ($ret, $module) = $gallery->loadModule($this->_moduleId);
	if ($ret->isError()) {
	    return $ret->wrap(__FILE__, __LINE__);
	}

	$ret = $module->init();
	if ($ret->isError()) {
	    return $ret->wrap(__FILE__, __LINE__);
	}
	
	$ret = $module->install();
	if ($ret->isError()) {
	    return $ret->wrap(__FILE__, __LINE__);
	}

	return GalleryStatus::success();
    }
}

?>
