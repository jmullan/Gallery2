GalleryCoreApi::requireOnce('modules/httpauth/classes/HttpAuthHelper.class');

/**
 * Get active user from username and password in HTTP headers.
 * @package HttpAuth
 * @subpackage Classes
 * @author Jack Bates <ms419@freezone.co.uk>
 * @version $Revision$
 */
class HttpAuthPlugin /* extends GalleryAuthPlugin */ {

    /**
     * @see GalleryAuthPlugin::getUser
     */
    function getUser() {
	list ($authtype, $username, $password) = HttpAuthHelper::getHttpAuth();

	/* Ignore disabled users, since we don't have a facility for showing an error */
	list ($ret, $isDisabled) = GalleryCoreApi::isDisabledUsername($username);
	if ($ret) {
	    return array($ret, null);
	}

	list ($ret, $user) = HttpAuthHelper::getUser($authtype, $username);
	if ($ret) {
	    return array($ret, null);
	}

	/*
	 * We are effectively logging in on every request when we use this plugin.  We can't
	 * post an event each time we do this; it will cause guest users to endlessly post
	 * Gallery::FailedLogin events and regular users to post Gallery::Login events.
	 */
	if (!$isDisabled && isset($user) && $user->isCorrectPassword($password)) {
	    return array(null, $user);
	}

	return array(null, null);
    }
}
?>
