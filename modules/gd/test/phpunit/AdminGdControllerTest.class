/**
 * AdminGd controller tests
 * @package Gd
 * @subpackage PHPUnit
 */
class AdminGdControllerTest extends GalleryControllerTestCase {

    function AdminGdControllerTest($methodName) {
	$this->GalleryControllerTestCase($methodName, 'gd:AdminGd');
    }

    function setUp() {
	global $gallery;
	parent::setUp();
	
	list ($ret, $this->_saveParameters['jpegQuality']) =
	    GalleryCoreApi::getPluginParameter('module', 'gd', 'jpegQuality');
	if ($ret->isError()) {
	    print $ret->getAsHtml();
	    return $this->failWithStatus($ret->wrap(__FILE__, __LINE__));
	}

    }

    function tearDown() {
	global $gallery;
	
	$ret = GalleryCoreApi::setPluginParameter('module', 'gd', 'jpegQuality', $this->_saveParameters['jpegQuality']);
	if ($ret->isError()) {
	    print $ret->getAsHtml();
	    return $this->failWithStatus($ret->wrap(__FILE__, __LINE__));
	}
	
	parent::tearDown();
    }

    function testSaveGoodPath() {
	global $gallery;
	
	$platform = $gallery->getPlatform();
	$slash = $platform->getDirectorySeparator();
	
	/* Use valid inputs */
	GalleryUtilities::putRequestVariable('form[action][save]', 1);
	GalleryUtilities::putRequestVariable('form[jpegQuality]', '12');
	
	/* Perform the request and verify that we succeeded */
	$results = $this->handleRequest();
	$this->assertEquals(array('return' => 1,
				  'redirect' => array('view' => 'core:SiteAdmin',
						      'subView' => 'gd:AdminGd'),
				  'status' => array('saved' => 1),
				  'error' => array()),
			    $results);
	
	/* Verify the settings went in properly */
	$this->assertEquals(array(GalleryStatus::success(), '12'),
			    GalleryCoreApi::getPluginParameter('module', 'gd', 'jpegQuality'));
    }

    function testCancel() {
	global $gallery;
	
	/* Use valid inputs */
	GalleryUtilities::putRequestVariable('form[action][cancel]', 1);
	
	/* Perform the request and verify that we succeeded */
	$results = $this->handleRequest();
	$this->assertEquals(array('return' => 1,
				  'redirect' => array('view' => 'core:SiteAdmin',
						      'subView' => 'gd:AdminGd'),
				  'status' => array(),
				  'error' => array()),
			    $results);
    }

}

