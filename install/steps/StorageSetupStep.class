class StorageSetupStep extends InstallStep {
    function stepName() {
	return _('Storage Setup');
    }

    function loadGalleryObject(&$gallery) {
	$gallery->setConfig('data.gallery.base', $this->_dir);
    }

    function loadTemplateData(&$templateData) {
	global $gallery;
	if (empty($this->_dir)) {
	    $this->_dir = $gallery->getConfig('data.gallery.base');
	    if (empty($this->_dir)) {
		$this->_dir = dirname(dirname(dirname(__FILE__))) . '/g2data';
	    }
	}

	if (!empty($_POST['action']) && $_POST['action'] == 'save') {
	    if (empty($_POST['dir'])) {
		$templateData['error']['missing_value'] = 1;
	    } else if (!is_dir($_POST['dir'])) {
		$templateData['error']['missing_dir'] = 1;
	    } else if (!is_readable($_POST['dir'])) {
		$templateData['error']['inaccessible_dir'] = 1;
	    } else if (!is_writable($_POST['dir'])) {
		$templateData['error']['readonly_dir'] = 1;
	    } else {
		// populate the dir
		if (!StorageSetupStep::populateDataDirectory($_POST['dir'])) {
		    $templateData['error']['creation_error'] = 1;
		} else {
		    $this->_dir = $_POST['dir'];
		    $this->setComplete(true);
		}
	    }
	    $templateData['dir'] = $_POST['dir'];
	} else {
	    $templateData['dir'] = $this->_dir;
	}

	if ($this->isComplete()) {
	    $templateData['bodyFile'] = 'templates/StorageSetupSuccess.html';
	} else {
	    $templateData['bodyFile'] = 'templates/StorageSetupRequest.html';
	}
    }

    function populateDataDirectory($dataBase) {
	/* Create the sub directories, if necessary */
	foreach (array('albums',
		       'cache',
		       'tmp',
		       'smarty',
		       'smarty/templates_c') as $key) {
	    $dir = "$dataBase/$key";

	    if (file_exists($dir) && !is_dir($dir)) {
		return false;
	    }

	    if (!file_exists($dir)) {
		if (!mkdir($dir)) {
		    return false;
		}
	    }

	    if (!is_writeable($dir)) {
		return false;
	    }
	}
	return true;
    }
}
